<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          title="Video"
          xtype="dialog">
<items jcr:primaryType="cq:WidgetCollection">
 <tabs jcr:primaryType="cq:TabPanel"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <video
                jcr:primaryType="cq:Widget"
                title="Video"
                xtype="panel">

                    <items jcr:primaryType="cq:WidgetCollection">

                        <file
                                jcr:primaryType="cq:Widget"
                                allowUpload="{Boolean}false"
                                allowBlank="{Boolean}true"
                                autoUploadDelay="1"
                                ddGroups="[media]"
                                fieldLabel="File"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                name="./file"
                                xtype="html5smartfile"/>

                    </items>
        </video>
        <layout
                jcr:primaryType="cq:Widget"
                title="Layout"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <lightbox_size
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Note: Max width and height will be crop at 90%. If these fields have no value then it will use 70% as default. The content display size in lightbox of a page, which it is determined by the the first video or media gallery from the page."
                        fieldLabel="Lightbox Media Display Area"
                        heightParameter="./lightboxHeight"
                        heightSuffix=""
                        widthParameter="./lightboxWidth"
                        widthSuffix=""
                        xtype="sizefield"/>
                <thumbnail_size
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Note: If these fields has no value then it will use original image size."
                        fieldLabel="Video Thumbnail Size"
                        heightParameter="./thumbnailHeight"
                        heightSuffix=""
                        widthParameter="./thumbnailWidth"
                        widthSuffix=""
                        xtype="sizefield"/>
                <assetTitlePrefix
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Prefix text for hover"
                        name="./assetTitlePrefix"
                        xtype="textfield"/>

                <variant
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue=""
                        value=""
                        fieldLabel="Variant"
                        name="./variant"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">

                        <default
                                jcr:primaryType="nt:unstructured"
                                value=""
                                text="Default" />
                    </options>
                </variant>

            </items>

        </layout>
        <styleTab
                jcr:primaryType="cq:Widget"
                path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                xtype="cqinclude" />
        <accessibilityTab jcr:primaryType="cq:Panel"
                          path="/apps/aemdesign/global/dialog/classic/common/items/accessibilityTab.infinity.json"
                          xtype="cqinclude"/>

    </items>
</tabs>
</items>

</jcr:root>
