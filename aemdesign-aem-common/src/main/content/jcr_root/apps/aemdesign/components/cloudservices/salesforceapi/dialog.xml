<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <proxy
            jcr:primaryType="nt:unstructured"
            html="&lt;i>These credentials are used to connect to Salesforce&lt;i>"
            title="Salesforce API Settings"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <clientid
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Client Id"
                    name="./metaData/clientId"
                    xtype="textfield"/>
                <clientsecret
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Client Secret"
                    name="./metaData/clientSecret"
                    xtype="password"/>
                <clientsecretencryption
                    jcr:primaryType="cq:Widget"
                    name="./metaData/clientSecret@Encrypted"
                    xtype="hidden"/>
                <environment
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Login Token Url"
                    name="./metaData/environment"
                    xtype="textfield"/>
                <redirecturi
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Service Url"
                    name="./metaData/redirectUri"
                    xtype="textfield"/>
                <granttype
                    jcr:primaryType="cq:Widget"
                    defaultValue="password"
                    fieldLabel="Authentication Type"
                    name="./metaData/grant_type"
                    type="select"
                    xtype="selection">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <default
                            jcr:primaryType="nt:unstructured"
                            text="Default"
                            value=""/>
                        <password
                            jcr:primaryType="nt:unstructured"
                            text="Password"
                            value="password"/>
                        <authorizationcode
                            jcr:primaryType="nt:unstructured"
                            text="Token"
                            value="authorization_code"/>
                    </items>
                </granttype>
                <user
                    jcr:primaryType="cq:Widget"
                    fieldLabel="User Id"
                    name="./metaData/user"
                    xtype="textfield"/>
                <password
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Password"
                    name="./metaData/password"
                    xtype="password"/>
                <passwordencryption
                    jcr:primaryType="cq:Widget"
                    name="./metaData/password@Encrypted"
                    xtype="hidden"/>
            </items>
        </proxy>
    </items>
</jcr:root>
