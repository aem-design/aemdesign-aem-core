<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
    jcr:primaryType="cq:Dialog"
    title="Redirect Notification"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <configTab
                        jcr:primaryType="cq:Panel"
                        title="Config">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <noteLabel
                                jcr:primaryType="cq:Widget"
                                html="&lt;span style=&quot;color: red; font-weight: bold; font-size: large&quot;>This component is only visible in Author and Preview Mode&lt;/span>"
                                xtype="label"/>
                        <redirectTitle jcr:primaryType="cq:Widget"
                                       fieldLabel="Redirect Title"
                                       fieldDescription="Text to show when target is missing"
                                       name="./redirectTitle"
                                       allowBlank="{Boolean}true"
                                       xtype="textfield"/>
                        <redirectUrl jcr:primaryType="cq:Widget"
                                     fieldLabel="Redirect Url"
                                     fieldDescription="Url to use when target is missing"
                                     name="./redirectUrl"
                                     allowBlank="{Boolean}true"
                                     xtype="textfield"/>
                    </items>
                </configTab>
            </items>
        </tabs>
    </items>
</jcr:root>
