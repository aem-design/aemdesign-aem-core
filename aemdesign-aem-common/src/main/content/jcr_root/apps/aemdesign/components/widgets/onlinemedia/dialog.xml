<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          helpPath="en/cq/current/wcm/default_components.html#Text"
          jcr:primaryType="cq:Dialog" title="Online Media"
          xtype="dialog">

    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <onlinemediaTab
                        jcr:primaryType="cq:Panel"
                        border="false"
                        title="Online Media"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <provider
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}false"
                                fieldLabel="Provider"
                                name="./provider"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value=""/>
                                <youtube
                                        jcr:primaryType="nt:unstructured"
                                        value="youtube"
                                        text="Youtube"/>
                                <vimeo
                                        jcr:primaryType="nt:unstructured"
                                        value="vimeo"
                                        text="Vimeo"/>
                                <issue
                                        jcr:primaryType="nt:unstructured"
                                        value="issuu"
                                        text="Issuu Digital Publishing"/>
                            </options>
                        </provider>
                        <mediaId jcr:primaryType="cq:Widget"
                               allowBlank="{Boolean}false"
                               fieldLabel="Media ID"
                               fieldDescription="Media Identifier for Provider above"
                               name="./mediaId"
                               xtype="textfield"/>

                    </items>
                </onlinemediaTab>
                <layoutTab
                        jcr:primaryType="cq:Panel"
                        border="false"
                        title="Layout"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <variant
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}false"
                                fieldLabel="Variant"
                                name="./variant"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="Default"/>
                            </options>
                        </variant>
                        <mediaGroup
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}false"
                                collapsible="{Boolean}true"
                                title="Media Attribute Configuration"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <imageSize
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Media Size"
                                        fieldDescription="Note: No specified video size, the inline width and height will become 100%. Then, it stretches to fit to the containing div' size to display ."
                                        widthParameter="./width"
                                        heightParameter="./height"
                                        xtype="sizefield"/>
                            </items>
                        </mediaGroup>
                    </items>
                </layoutTab>
                <styleTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/style/items/styleTab.infinity.json"
                        xtype="cqinclude"/>
                <accessibilityTab jcr:primaryType="cq:Panel"
                                  path="/apps/aemdesign/global/dialog/classic/accessibility/items/accessibilityTab.infinity.json"
                                  xtype="cqinclude"/>
            </items>
        </tabs>
    </items>
</jcr:root>