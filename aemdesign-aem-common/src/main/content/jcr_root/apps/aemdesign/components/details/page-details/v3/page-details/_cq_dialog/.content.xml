<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page Details"
          helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/details/page-details/v3/page-details"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <detailsBasic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Details"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/page/content/items/pageBasicTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <detailsConfiguration
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <detailsConfiguration
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <presentation
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Presentation"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <variant
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        emptyOption="{Boolean}true"
                                                        fieldLabel="Variant"
                                                        name="./variant"
                                                        value="">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Default"
                                                                value=""/>
                                                            <hidden
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Hidden"
                                                                value="hidden"/>
                                                        </items>
                                                    </variant>

                                                    <hideTitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Prevent the title from appearing on the page."
                                                        fieldLabel="Hide Title"
                                                        name="./hideTitle"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </hideTitle>
                                                    <hideTitleTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./hideTitle@TypeHint"
                                                        value="Boolean"/>

                                                    <hideDescription
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Prevent the description from appearing on the page."
                                                        fieldLabel="Hide Description"
                                                        name="./hideDescription"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </hideDescription>
                                                    <hideDescriptionTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./hideDescription@TypeHint"
                                                        value="Boolean"/>
                                                </items>
                                            </presentation>
                                        </items>
                                    </detailsConfiguration>

                                    <structureConfiguration
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <structure
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Structure"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <useContainer
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        emptyOption="{Boolean}true"
                                                        fieldDescription="Wrap the content of the details component within a container element."
                                                        fieldLabel="Use Container"
                                                        name="./useContainer"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </useContainer>
                                                    <useContainerTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./useContainer@TypeHint"
                                                        value="Boolean"/>

                                                    <showBreadcrumb
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Toggle the breadcrumbs component off/on."
                                                        fieldLabel="Show Breadcrumbs"
                                                        name="./showBreadcrumb"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </showBreadcrumb>
                                                    <showBreadcrumbTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./showBreadcrumb@TypeHint"
                                                        value="Boolean"/>

                                                    <showToolbar
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Toggle the toolbar component off/on."
                                                        fieldLabel="Show Toolbar"
                                                        name="./showToolbar"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </showToolbar>
                                                    <showToolbarTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./showToolbar@TypeHint"
                                                        value="Boolean"/>

                                                    <showPageDate
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Toggle the page date component off/on."
                                                        fieldLabel="Show Page Date"
                                                        name="./showPageDate"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </showPageDate>
                                                    <showPageDateTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./showPageDate@TypeHint"
                                                        value="Boolean"/>

                                                    <showParsys
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Show a parsys component to author additional content"
                                                        fieldLabel="Show Parsys"
                                                        name="./showParsys"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                            variant="valuelist"/>
                                                    </showParsys>
                                                    <showParsysTypeHint
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        ignoreData="{Boolean}true"
                                                        name="./showParsys@TypeHint"
                                                        value="Boolean"/>
                                                </items>
                                            </structure>
                                        </items>
                                    </structureConfiguration>

                                    <elementConfiguration
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <titleConfiguration
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Title Configuration"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <titleType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Which type of heading should be used for the title?"
                                                        fieldLabel="Title Type"
                                                        name="./titleType"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            variant="valuelist"
                                                            path="/content/cq:tags/${namespace}/component-dialog/html/heading"/>
                                                    </titleType>

                                                    <titleFormat
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldDescription="Define a custom title formatter that generates custom output."
                                                        fieldLabel="Title Format"
                                                        name="./titleFormat"
                                                        emptyOption="{Boolean}true"
                                                        value="">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                            variant="tagidvalue"
                                                            path="/content/cq:tags/${namespace}/component-style-theme/details/page-details/format/title"/>
                                                    </titleFormat>
                                                </items>
                                            </titleConfiguration>
                                        </items>
                                    </elementConfiguration>
                                </items>
                            </columns>
                        </items>
                    </detailsConfiguration>

                    <imageBackground
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background Image"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/asset/content/items/imageBackgroundTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <thumbnailImage
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Thumbnail"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/asset/content/items/thumbnailImageTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <secondaryImage
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Secondary Thumbnail"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/asset/content/items/secondaryImageTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <badgeConfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Badge Config"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/badge/content/items/tabs/items/badgeConfigTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <style
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Style"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/style/content/items/tabs/items/styleTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <accessibility
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Accessibility"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/accessibility/content/items/tabs/items/accessibilityTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <pageMetadata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Page Metadata"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/pageMetadata/content/items/pageMetadataTab"
                        resourceType="granite/ui/components/foundation/section"/>

                    <analytics
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Analytics"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/aemdesign/global/dialog/touch/analytics/content/items/tabs/items/analyticsTab"
                        resourceType="granite/ui/components/foundation/section"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
