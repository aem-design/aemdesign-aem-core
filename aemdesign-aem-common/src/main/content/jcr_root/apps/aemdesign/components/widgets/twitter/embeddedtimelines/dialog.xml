<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          title="Twitter Embedded Timeline"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <basicTab
                jcr:primaryType="cq:Panel"
                title="Twitter">
            <items jcr:primaryType="cq:WidgetCollection">
                <!--<userId
                    jcr:primaryType="cq:Widget"
                    fieldLabel="User id"
                    name="./userId"
                    xtype="textfield" />
                <widgetId
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Widget id"
                    name="./widgetId"
                    xtype="textfield" />-->

                <href
                        jcr:primaryType="cq:Widget"
                        fieldDescription="The absolute URL of the Twitter Page that will be liked. This is a required setting."
                        fieldLabel="URL to Like"
                        name="./href"
                        xtype="textfield"/>
                <hrefTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="URL Title"
                        name="./hrefTitle"
                        xtype="textfield"/>
                <widgetScriptSrc
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Twitter Widget Script URL"
                        name="./widgetScriptSrc"
                        xtype="textfield"/>
            </items>
        </basicTab>

        <textTab
                jcr:primaryType="cq:Panel"
                path="/apps/aemdesign/global/dialog/classic/rteprofile/items/advanced.infinity.json"
                xtype="cqinclude"/>

        <imageExtTab
                jcr:primaryType="cq:Widget"
                path="/apps/aemdesign/global/dialog/classic/images/items/imageExtTab.infinity.json"
                xtype="cqinclude"/>
        <imageExtResourceType
                jcr:primaryType="cq:Widget"
                path="/apps/aemdesign/global/dialog/classic/images/items/imageExtResourceType.infinity.json"
                xtype="cqinclude"/>

        <styleTab
                jcr:primaryType="cq:Widget"
                path="/apps/aemdesign/global/dialog/classic/style/items/styleTab.infinity.json"
                xtype="cqinclude" />

        <accessibilityTab jcr:primaryType="cq:Panel"
                          path="/apps/aemdesign/global/dialog/classic/accessibility/items/accessibilityTab.infinity.json"
                          xtype="cqinclude"/>

        <advancedStyle
                jcr:primaryType="cq:Panel"
                title="Advanced CSS">
            <items jcr:primaryType="cq:WidgetCollection">
                <cssClassWidgetHeader
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS Class for Widget header"
                        name="./cssClassWidgetHeader"
                        xtype="textfield"/>
                <cssClassImage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS Class for Image"
                        name="./cssClassImage"
                        xtype="textfield"/>
                <cssClassTwitterFeed
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS Class for Twitter Feed"
                        name="./cssClassTwitterFeed"
                        xtype="textfield"/>
                <cssClassTwitterTimeline
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS Class for Twitter Timeline"
                        name="./cssClassTwitterTimeline"
                        xtype="textfield"/>
                <cssIDTwitterWidget
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS ID for Twitter Widget"
                        name="./cssIDTwitterWidget"
                        xtype="textfield"/>
                <cssIDTwitterScript
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS ID for Twitter Script"
                        name="./cssIDTwitterScript"
                        xtype="textfield"/>
            </items>
        </advancedStyle>
    </items>
</jcr:root>
