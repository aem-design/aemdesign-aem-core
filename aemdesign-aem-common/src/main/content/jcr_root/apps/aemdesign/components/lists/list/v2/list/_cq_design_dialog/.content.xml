<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="List"
          sling:resourceType="cq/gui/components/authoring/dialog"
          helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/lists/list/v2/list">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <listSettings
                        jcr:primaryType="nt:unstructured"
                        jcr:title="List Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <disableChildren
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Disable children list source type."
                                name="./disableChildren"
                                text="Disable children"
                                uncheckedValue="false"
                                value="true"/>
                            <disableDescendants
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Disable descendants list source type."
                                name="./disableDescendants"
                                text="Disable descendants"
                                uncheckedValue="false"
                                value="true"/>
                            <disableStatic
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Disable static list source type."
                                name="./disableStatic"
                                text="Disable static"
                                uncheckedValue="false"
                                value="true"/>
                            <disableSearch
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Disable search list source type."
                                name="./disableSearch"
                                text="Disable search"
                                uncheckedValue="false"
                                value="true"/>
                            <disableTags
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Disable tags list source type."
                                name="./disableTags"
                                text="Disable tags"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </listSettings>

                    <listOptions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="List Options"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <orderBy
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Set the default order of the list items."
                                fieldLabel="Order By"
                                emptyOption="{Boolean}true"
                                name="./orderBy">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                    path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/components/lists/list/orderby"
                                    variant="valuelist"/>
                            </orderBy>

                            <sortOrder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Set the default sort order of the list items."
                                fieldLabel="Sort Order"
                                name="./sortOrder">
                                <items jcr:primaryType="nt:unstructured">
                                    <asc
                                        jcr:primaryType="nt:unstructured"
                                        text="Ascending"
                                        value="asc"/>
                                    <desc
                                        jcr:primaryType="nt:unstructured"
                                        text="Descending"
                                        value="desc"/>
                                </items>
                            </sortOrder>

                            <limit
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldDescription="Set the default maximum number of items to display in the list."
                                fieldLabel="Limit"
                                min="1"
                                name="./limit"/>

                            <paginateAfter
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldDescription="Set the default number of results before pagination will appear."
                                fieldLabel="Paginate After"
                                min="1"
                                name="./pageMax"/>
                        </items>
                    </listOptions>

                    <listConfiguration
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <listItems
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Items"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <showHidden
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Define whether or not pages hidden from navigation will be visible in the list."
                                        name="./showHidden"
                                        text="Show Hidden Pages"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                            </listItems>

                            <feed
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Feed"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <disableFeedTypeRSS
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Disable the RSS feed type."
                                        name="./disableFeedTypeRSS"
                                        text="Disable RSS Feed"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <disableFeedTypeAtom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Disable the Atom feed type."
                                        name="./disableFeedTypeAtom"
                                        text="Disable Atom Feed"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                            </feed>
                        </items>
                    </listConfiguration>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
