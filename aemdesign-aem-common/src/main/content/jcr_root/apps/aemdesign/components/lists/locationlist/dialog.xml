<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Location List"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <imageTab jcr:primaryType="cq:Widget"
                            title="Image"
                            xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <image jcr:primaryType="cq:Widget"
                            allowUpload="{Boolean}false"
                            allowBlank="{Boolean}true"
                            autoUploadDelay="1"
                            ddGroups="[media]"
                            fieldLabel="Image"
                            fileNameParameter="./fileName"
                            fileReferenceParameter="./fileReference"
                            name="./file"
                            xtype="html5smartfile"/>
                    </items>
                </imageTab>
                <locationListTab
                        jcr:primaryType="cq:Widget"
                        title="Location List"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <listFrom
                                jcr:primaryType="cq:Widget"
                                value="static"
                                defaultValue=""
                                fieldLabel="Build list using"
                                name="./listFrom"
                                xtype="hidden"/>
                        <variant
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}true"
                                fieldLabel="Variant"
                                name="./variant"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="Default"/>
                            </options>
                        </variant>
                        <detailsBadge jcr:primaryType="cq:Widget"
                                      defaultValue=""
                                      value=""
                                      allowBlank="{Boolean}true"
                                      fieldLabel="Badges"
                                      fieldDescription="Which badge to use from Details component"
                                      name="./detailsBadge"
                                      type="select"
                                      xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="Default"/>
                            </options>
                        </detailsBadge>
                        <!-- Override the Default value for Print Structure in advanced tab -->
                        <printStructure jcr:primaryType="cq:Widget"
                                        fieldLabel="Print List Structure"
                                        fieldDescription="Don't print structure of the list, omit (OL/UL and LI tags)"
                                        name="./printStructure"
                                        defaultValue=""
                                        value="false"
                                        xtype="hidden"/>
                        <topic jcr:primaryType="cq:Widget"
                               fieldLabel="Topic Queue"
                               fieldDescription="Subscribers waiting for notification of the filter value is updated"
                               allowBlank="{Boolean}false"
                               name="./topicQueue"
                               options="/etc/tags/component-topic/topic.valuelist.json"
                               type="select"
                               defaultValue=""
                               value=""
                               xtype="selection"/>
                    </items>
                </locationListTab>
                <staticTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/components/lists/list/dialog/items/tabs/items/staticTab.infinity.json"
                        xtype="cqinclude"/>
                <styleTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/style/items/styleTab.infinity.json"
                        xtype="cqinclude" />
                <accessibilityTab jcr:primaryType="cq:Panel"
                                  path="/apps/aemdesign/global/dialog/classic/accessibility/items/accessibilityTab.infinity.json"
                                  xtype="cqinclude"/>
            </items>
        </tabs>
    </items>
</jcr:root>
