<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Content Block"
          helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/layout/contentblock/v2/contentblock"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[aem.design.components.coral.widgets.form.assetoptions]">
    <content
        granite:id="dialog-contentblock"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            type="nav"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"/>
        <items jcr:primaryType="nt:unstructured">
            <basicTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/section">

                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <basic
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Basic"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./title"/>

                                    <titleType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="which paragraph tag to use for Title display"
                                        fieldLabel="Title Type"
                                        name="./titleType"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/html/heading"/>
                                    </titleType>

                                    <icon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="aemdesign/components/coral/common/form/tagfield"
                                        fieldDescription="If set and 'Show Icon' is true, an icon will appear before the title"
                                        fieldLabel="Icon"
                                        multiple="{Boolean}false"
                                        name="./icon"
                                        rootPath="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-style-icon"/>
                                </items>
                            </basic>
                        </items>
                    </column>
                </items>
            </basicTab>

            <layoutTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Layout"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variant
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Layout"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <variant
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide"
                                        cq-dialog-dropdown-showhide-target=".variant-config-showhide-target"
                                        emptyOption="{Boolean}true"
                                        fieldLabel="Variant"
                                        name="./variant"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/components/layout/contentblock/variant"
                                            variant="valuelist"/>
                                    </variant>
                                </items>
                            </variant>

                            <childsectionVariantConfiguration
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide variant-config-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="childsection">
                                <items jcr:primaryType="nt:unstructured">
                                    <childsectionParentConfiguration
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Parent Configuration"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <dataParent
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Unique identifier of the parent container excluding the # symbol."
                                                fieldLabel="Parent ID"
                                                name="./dataParent"/>

                                            <dataToggle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                emptyOption="{Boolean}true"
                                                fieldDescription="Which type of type should this container listen to."
                                                fieldLabel="Toggle Type"
                                                name="./dataToggle"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/html/toggle"/>
                                            </dataToggle>
                                        </items>
                                    </childsectionParentConfiguration>
                                </items>
                            </childsectionVariantConfiguration>

                            <configuration
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Configuration"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <hideTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Prevent the title from appearing on the page."
                                        fieldLabel="Hide Title?"
                                        name="./hideTitle"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </hideTitle>

                                    <hideInContentMenu
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Should this Content Block be hidden from the Content Block Menu (if any)?"
                                        fieldLabel="Hide in Menu?"
                                        name="./hideInMenu"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </hideInContentMenu>

                                    <showTopLink
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Show the 'Back to Top' link at the bottom of the Content Block"
                                        fieldLabel="Show Back to Top link"
                                        name="./showTopLink"
                                        emptyOption="{Boolean}false"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </showTopLink>

                                    <showIcon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Show the icon (if authored)"
                                        fieldLabel="Show Icon"
                                        name="./showIcon"
                                        emptyOption="{Boolean}false"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </showIcon>
                                </items>
                            </configuration>
                        </items>
                    </column>
                </items>
            </layoutTab>

            <linkLeftTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Left Links"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variant
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Left Links"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="will appear on left of links"
                                        fieldLabel="Title"
                                        name="./linksLeftTitle"/>

                                    <linksLeft
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        fieldDescription="These links will appear before links"
                                        fieldLabel="Left Links">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            name="./linkPagesLeft"
                                            rootPath="/content"
                                            required="{Boolean}false"/>
                                    </linksLeft>
                                </items>
                            </variant>
                        </items>
                    </column>
                </items>
            </linkLeftTab>

            <linkRightTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Right Links"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variant
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Right Links"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="These links will appear before links"
                                        fieldLabel="Title"
                                        name="./linksRightTitle"/>

                                    <linksRight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        fieldDescription="These links will appear on the right title"
                                        fieldLabel="Right Links">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            name="./linkPagesRight"
                                            rootPath="/content"
                                            required="{Boolean}false"/>
                                    </linksRight>
                                </items>
                            </variant>
                        </items>
                    </column>
                </items>
            </linkRightTab>

            <imageBackgroundTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Background Image"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/imageBackgroundTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <videoBackgroundTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Background Video"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/videoBackgroundTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <styleTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Style"
                path="/apps/aemdesign/global/dialog/touch/style/content/items/styleTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <accessibilityTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Accessibility"
                path="/apps/aemdesign/global/dialog/touch/accessibility/content/items/accessibilityTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <analyticsTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Analytics"
                path="/apps/aemdesign/global/dialog/touch/analytics/content/items/analyticsTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
        </items>
    </content>
</jcr:root>
