<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Content Reference"
          helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/content/reference/v2/reference"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            type="nav"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"/>
        <items jcr:primaryType="nt:unstructured">
            <referenceTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Reference"
                sling:resourceType="granite/ui/components/foundation/section">

                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <reference
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Reference"
                                name="./path"
                                predicate="nosystem"
                                rootPath="/content"/>

                        </items>
                    </column>
                </items>
            </referenceTab>
            <layoutTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Layout"
                sling:resourceType="granite/ui/components/foundation/section">

                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variant
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Layout"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <variant
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        fieldLabel="Variant"
                                        name="./variant"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <default
                                                jcr:primaryType="nt:unstructured"
                                                text="Render"
                                                value=""/>
                                        </items>
                                    </variant>

                                    <selectors
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Use following selectors when rendering content"
                                        fieldLabel="Selectors"
                                        name="./selectors"
                                        required="{Boolean}false"/>

                                    <variant
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        fieldDescription="Use following rendering mode"
                                        fieldLabel="WCM Mode"
                                        name="./wcmmodeName"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <default
                                                jcr:primaryType="nt:unstructured"
                                                text="Disabled"
                                                value=""/>
                                            <edit
                                                jcr:primaryType="nt:unstructured"
                                                text="Edit"
                                                value="EDIT"/>
                                            <preview
                                                jcr:primaryType="nt:unstructured"
                                                text="Preview"
                                                value="PREVIEW"/>
                                            <design
                                                jcr:primaryType="nt:unstructured"
                                                text="Design"
                                                value="DESIGN"/>
                                        </items>
                                    </variant>

                                </items>
                            </variant>
                        </items>
                    </column>
                </items>
            </layoutTab>
            <style
                jcr:primaryType="nt:unstructured"
                jcr:title="Style"
                path="/apps/aemdesign/global/dialog/touch/style/content/items/tabs/items/styleTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <accessibility
                jcr:primaryType="nt:unstructured"
                jcr:title="Accessibility"
                path="/apps/aemdesign/global/dialog/touch/accessibility/content/items/tabs/items/accessibilityTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
        </items>
    </content>
</jcr:root>
