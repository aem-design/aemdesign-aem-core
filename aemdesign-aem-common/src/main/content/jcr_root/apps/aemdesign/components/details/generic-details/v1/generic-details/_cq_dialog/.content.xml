<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Generic Details"
          helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/details/generic-details/v2/generic-details"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[aem.design.components.author.genericdetails,aem.design.components.coral.widgets.form.assetoptions]">
    <content
        granite:id="dialog-genericdetails"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>

        <items jcr:primaryType="nt:unstructured">
            <pageDetails
                jcr:primaryType="nt:unstructured"
                jcr:title="Page Details"
                path="/apps/aemdesign/global/dialog/touch/page/content/items/pageBasicTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <layoutTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Layout"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>

                <items jcr:primaryType="nt:unstructured">
                    <column1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variant
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Layout"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <variant
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        fieldLabel="Variant"
                                        name="./variant"
                                        class="dialog-dropdown-showhide"
                                        dialog-dropdown-showhide-target=".genericdetails-variant-showhide-target">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="tagidvalue"
                                            path="/content/cq:tags/${namespace}/component-dialog/components/details/generic-details/variant"/>
                                    </variant>
                                </items>
                            </variant>

                            <variantCustomConfig
                                jcr:primaryType="nt:unstructured"
                                class="hide genericdetails-variant-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="custom"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <variantCustomConfig
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Custom Layout"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">

                                            <note
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/note"
                                                note="Customise Variant Fields Template and select Fields to render"/>

                                            <variantFieldsTemplate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Fields Template"
                                                fieldDescription="use following fields template to wrap required fields"
                                                name="./variantFieldsTemplate"
                                                emptyOption="{Boolean}true">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/components/details/generic-details/templates"/>
                                            </variantFieldsTemplate>

                                            <variantFields
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldDescription="select fields that should appear in variant"
                                                fieldLabel="Fields">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Field"
                                                    name="./variantFields"
                                                    emptyOption="{Boolean}true"
                                                    required="{Boolean}true">
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                        variant="valuelist"
                                                        path="/content/cq:tags/${namespace}/component-dialog/components/details/generic-details/fields"/>
                                                </field>
                                            </variantFields>
                                        </items>
                                    </variantCustomConfig>
                                </items>
                            </variantCustomConfig>
                        </items>
                    </column1>

                    <column2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variantDisplatyConfig
                                jcr:primaryType="nt:unstructured"
                                class="genericdetails-variant-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="displayoptions"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayOptions
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Display Options"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <useContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyOption="{Boolean}true"
                                                fieldDescription="Wrap the content of Page Details within a container element."
                                                fieldLabel="Use Container"
                                                name="./useContainer"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"
                                                    variant="valuelist"/>
                                            </useContainer>

                                            <showBreadcrumb
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Toggle the breadcrumbs component off/on."
                                                fieldLabel="Show Breadcrumbs"
                                                name="./showBreadcrumb"
                                                emptyOption="{Boolean}true"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"/>
                                            </showBreadcrumb>

                                            <showToolbar
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Toggle the toolbar component off/on."
                                                fieldLabel="Show Toolbar"
                                                name="./showToolbar"
                                                emptyOption="{Boolean}true"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"/>
                                            </showToolbar>

                                            <showPageDate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Toggle the page date component off/on."
                                                fieldLabel="Show Page Date"
                                                name="./showPageDate"
                                                emptyOption="{Boolean}true"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"/>
                                            </showPageDate>

                                            <showParsys
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Show a parsys component to author additional content"
                                                fieldLabel="Show Parsys"
                                                name="./showParsys"
                                                emptyOption="{Boolean}true"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"/>
                                            </showParsys>

                                            <hideTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Prevent the title from appearing on the page."
                                                fieldLabel="Hide Title"
                                                name="./hideTitle"
                                                emptyOption="{Boolean}false"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"/>
                                            </hideTitle>

                                            <hideDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Prevent the description from appearing on the page."
                                                fieldLabel="Hide Description"
                                                name="./hideDescription"
                                                emptyOption="{Boolean}false"
                                                value="">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="aemdesign/components/coral/datasources/tags"
                                                    variant="valuelist"
                                                    path="/content/cq:tags/${namespace}/component-dialog/common/true-false"/>
                                            </hideDescription>
                                        </items>
                                    </displayOptions>
                                </items>
                            </variantDisplatyConfig>

                            <titleFormat
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Title Format"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <titleType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="which paragraph tag to use for Title display"
                                        fieldLabel="Title Type"
                                        name="./titleType"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${namespace}/component-dialog/html/heading"/>
                                    </titleType>

                                    <titleFormat
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Format of Title to be used for display"
                                        fieldLabel="Title Format"
                                        name="./titleFormat"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="tagidvalue"
                                            path="/content/cq:tags/${namespace}/component-style-theme/details/page-details/format/title"/>
                                    </titleFormat>
                                </items>
                            </titleFormat>
                        </items>
                    </column2>
                </items>
            </layoutTab>

            <badgeConfig
                jcr:primaryType="nt:unstructured"
                jcr:title="Badge Config"
                path="/apps/aemdesign/global/dialog/touch/badge/content/items/tabs/items/badgeConfigTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <imageBackground
                jcr:primaryType="nt:unstructured"
                jcr:title="Background Image"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/imageBackgroundTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <thumbnailImage
                jcr:primaryType="nt:unstructured"
                jcr:title="Thumbnail"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/thumbnailImageTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <secondaryImage
                jcr:primaryType="nt:unstructured"
                jcr:title="Secondary Thumbnail"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/secondaryImageTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <style
                jcr:primaryType="nt:unstructured"
                jcr:title="Style"
                path="/apps/aemdesign/global/dialog/touch/style/content/items/tabs/items/styleTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <accessibility
                jcr:primaryType="nt:unstructured"
                jcr:title="Accessibility"
                path="/apps/aemdesign/global/dialog/touch/accessibility/content/items/tabs/items/accessibilityTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <analytics
                jcr:primaryType="nt:unstructured"
                jcr:title="Analytics"
                path="/apps/aemdesign/global/dialog/touch/analytics/content/items/tabs/items/analyticsTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <pageAnalytics
                jcr:primaryType="nt:unstructured"
                jcr:title="Page Analytics"
                path="/apps/aemdesign/global/dialog/touch/pageAnalytics/content/items/pageAnalyticsTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <pageMetadata
                jcr:primaryType="nt:unstructured"
                jcr:title="Page Metadata"
                path="/apps/aemdesign/global/dialog/touch/pageMetadata/content/items/pageMetadataTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <dataSourceTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Data Source"
                path="/apps/aemdesign/global/dialog/touch/dataSource/content/items/dataSourceTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
        </items>
    </content>

</jcr:root>
