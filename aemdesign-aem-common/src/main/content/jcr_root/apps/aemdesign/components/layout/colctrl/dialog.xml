<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#Columns"
          title="Column Control"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab-layout
                jcr:primaryType="cq:Panel"
                title="Layout"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <layout
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        defaultValue=""
                        value=""
                        fieldLabel="Column Layout"
                        name="./layout"
                        options="/etc/tags/component-dialog/layout/colctrl.valuelist.json"
                        type="select"
                        xtype="selection"/>
            </items>
        </tab-layout>
        <styleTab
                jcr:primaryType="cq:Widget"
                path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                xtype="cqinclude" />
        <tab-advanced-css
                jcr:primaryType="cq:Panel"
                title="Advanced CSS">
            <items jcr:primaryType="cq:WidgetCollection">
                <jumbotron
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS for Jumbotron"
                        name="./cssClassJumbotron"
                        xtype="textfield"/>
                <layout
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS for Layout"
                        name="./cssClassLayout"
                        xtype="textfield"/>
                <background
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS for Background"
                        name="./cssClassBackground"
                        xtype="textfield"/>
                <row
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS for Row"
                        name="./cssClassRow"
                        xtype="textfield"/>
                <column
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS for Column"
                        name="./cssClassColumn"
                        xtype="textfield"/>
            </items>
        </tab-advanced-css>
    </items>
</jcr:root>