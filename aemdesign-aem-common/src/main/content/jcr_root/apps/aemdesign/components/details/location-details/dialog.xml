<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
          description="The Location Details component is used to contain and publish location related structured data and content."
          title="Location Details"
          xtype="dialog">

    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <contentTab jcr:primaryType="cq:Panel"
                           title="Location Details">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <title
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageBasicTab/items/title.infinity.json"
                                xtype="cqinclude" />

                        <latitude
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Latitude"
                                fieldDescription="The X value of the coordinate of this location"
                                name="./latitude"
                                allowBlank="{Boolean}false"
                                xtype="numberfield"/>
                        <longitude
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Longitude"
                                fieldDescription="The Y value of the coordinate of this location"
                                name="./longitude"
                                allowBlank="{Boolean}false"
                                xtype="numberfield"/>
                        <pages
                                jcr:primaryType="cq:Widget"
                                fieldDescription="Click the '+' to add a new page"
                                fieldLabel="Pages "
                                name="./pages"
                                xtype="multifield">
                            <fieldConfig
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    rootPath="/content"
                                    width="155"
                                    xtype="pathfield"/>
                        </pages>
                    </items>
                </contentTab>

                <layoutTab jcr:primaryType="cq:Panel"
                           title="Layout">

                    <items jcr:primaryType="cq:WidgetCollection">
                        <variant
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}true"
                                fieldLabel="Variant"
                                name="./variant"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="default"/>
                            </options>
                        </variant>

                    </items>

                </layoutTab>

                <advancedTab jcr:primaryType="cq:Panel"
                           title="Advanced">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <menuConfigGroup
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageAdvancedTab/items/menuConfigGroup.infinity.json"
                                xtype="cqinclude"/>
                        <accessibilityConfigGroup
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageAdvancedTab/items/accessibilityConfigGroup.infinity.json"
                                xtype="cqinclude"/>
                    </items>
                </advancedTab>
                <styleTab jcr:primaryType="cq:Panel"
                        path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                        xtype="cqinclude" />

            </items>

        </tabs>
    </items>

</jcr:root>
