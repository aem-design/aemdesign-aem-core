<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    height="{Long}400"
    helpPath="en/cq/current/wcm/default_components.html#Forms Text Field"
    width="{Long}650"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <first
            jcr:primaryType="nt:unstructured"
            title="Title and Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <items
                        jcr:primaryType="nt:unstructured"
                        path="/apps/aemdesign/components/forms/defaults/items.infinity.json"
                        xtype="cqinclude"/>
                <!--
                <multivalue
                    jcr:primaryType="cq:Widget"
                    boxLabel="Property is multi value"
                    name="./multivalue"
                    type="checkbox"
                    xtype="selection"/>
                <readOnly
                    jcr:primaryType="cq:Widget"
                    boxLabel="Only show value"
                    fieldLabel=""
                    inputValue="true"
                    name="./readOnly"
                    xtype="checkbox"/>
                -->
                <type
                        jcr:primaryType="cq:Widget"
                        defaultValue=""
                        value=""
                        allowBlank="{Boolean}true"
                        fieldLabel="Type"
                        name="./type"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <default
                                jcr:primaryType="nt:unstructured"
                                value=""
                                text="Default"/>
                        <text
                                jcr:primaryType="nt:unstructured"
                                value="text"
                                text="Text"/>
                        <email
                                jcr:primaryType="nt:unstructured"
                                value="email"
                                text="Email"/>
                        <hidden
                                jcr:primaryType="nt:unstructured"
                                value="hidden"
                                text="Hidden"/>
                        <submit
                                jcr:primaryType="nt:unstructured"
                                value="submit"
                                text="Submit"/>
                    </options>
                </type>
                <placeHolder
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Place Holder"
                    name="./placeHolder"
                    xtype="textfield"/>
            </items>
        </first>
        <second
            jcr:primaryType="nt:unstructured"
            title="Initial Values"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <value
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Default Value"
                    name="./defaultValue"
                    xtype="textfield"/>
            </items>
        </second>
        <fourth
            jcr:primaryType="nt:unstructured"
            title="Constraints"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <required
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Required"
                    inputValue="true"
                    name="./required"
                    type="checkbox"
                    xtype="selection"/>
                <requiredMessage
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Required Message"
                    name="./requiredMessage"
                    xtype="textarea"/>
                <constraintType
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Constraint"
                    name="./constraintType"
                    options="/bin/wcm/foundation/forms/constraints.json"
                    type="select"
                    xtype="selection"/>
                <constraintMessage
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Constraint Message"
                    name="./constraintMessage"
                    xtype="textarea"/>
            </items>
        </fourth>
        <five
            jcr:primaryType="nt:unstructured"
            title="Styling"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <multiLine
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./rows"
                    heightSuffix="rows"
                    widthParameter="./cols"
                    widthSuffix="cols"
                    xtype="sizefield"/>
                <width
                    jcr:primaryType="cq:Widget"
                    anchor=""
                    fieldLabel="Width"
                    name="./width"
                    width="48"
                    xtype="textfield"/>
                <class
                    jcr:primaryType="cq:Widget"
                    anchor=""
                    fieldLabel="CSS"
                    name="./css"
                    xtype="textfield"/>
            </items>
        </five>
    </items>
</jcr:root>
