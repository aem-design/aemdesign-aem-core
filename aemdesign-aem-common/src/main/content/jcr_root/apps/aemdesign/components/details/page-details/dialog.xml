<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
        description="Page Details is to save additional info for the Page Properties"
        title="Page Details"
        height="490"
        width="600"
        helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/details/page-details"
        xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <pageDetails jcr:primaryType="cq:Panel"
                    path="/apps/aemdesign/global/dialog/classic/page/items/pageBasicTab.infinity.json"
                    xtype="cqinclude" />


                <layoutTab jcr:primaryType="cq:Panel"
                         title="Layout">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <variant
                            jcr:primaryType="cq:Widget"
                            allowBlank="{Boolean}true"
                            defaultValue=""
                            value=""
                            fieldLabel="Variant"
                            name="./variant"
                            type="select"
                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="Default" />
                                <hidden
                                        jcr:primaryType="nt:unstructured"
                                        value="hidden"
                                        text="Hidden" />
                            </options>
                        </variant>
                        <displayOptions
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}false"
                                collapsible="{Boolean}true"
                                title="Display Options"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <showBreadcrumb jcr:primaryType="cq:Widget"
                                                fieldLabel="Show Breadcrumb"
                                                fieldDescription="show breadcrumb above title"
                                                allowBlank="{Boolean}true"
                                                name="./showBreadcrumb"
                                                options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                                type="select"
                                                defaultValue=""
                                                value=""
                                                xtype="selection"/>

                                <showToolbar jcr:primaryType="cq:Widget"
                                             fieldLabel="Show Toolbar"
                                             fieldDescription="show toolbar above title"
                                             allowBlank="{Boolean}true"
                                             name="./showToolbar"
                                             options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                             type="select"
                                             defaultValue=""
                                             value=""
                                             xtype="selection"/>

                                <showParsys jcr:primaryType="cq:Widget"
                                            fieldLabel="Show Parsys"
                                            fieldDescription="show parsys after title"
                                            allowBlank="{Boolean}true"
                                            name="./showParsys"
                                            options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                            type="select"
                                            defaultValue=""
                                            value=""
                                            xtype="selection"/>
                            </items>
                        </displayOptions>

                        <titleFormat
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}true"
                                collapsible="{Boolean}true"
                                title="Title Format"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <titleType
                                        jcr:primaryType="cq:Widget"
                                        path="/apps/aemdesign/global/dialog/classic/contentblock/dialog/items/basicTab/items/title/items/titleType.infinity.json"
                                        xtype="cqinclude"/>

                                <titleFormat jcr:primaryType="cq:Widget"
                                             fieldLabel="Title Format"
                                             fieldDescription="Format of Title to be used for display"
                                             allowBlank="{Boolean}true"
                                             name="./titleFormat"
                                             options="/etc/tags/component-style-theme/details/page-details/format/title.valuelist.pathvalue.json"
                                             type="select"
                                             defaultValue=""
                                             xtype="selection"/>
                            </items>
                        </titleFormat>

                    </items>
                </layoutTab>

                <badgeConfigTab jcr:primaryType="cq:Panel"
                     path="/apps/aemdesign/global/dialog/classic/badge/items/badgeConfigTab.infinity.json"
                     xtype="cqinclude" />

                <imageBackgroundTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/images/items/imageBackgroundTab.infinity.json"
                        xtype="cqinclude"/>

                <imageBackgroundTabResourceType
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/images/items/imageBackgroundTabResourceType.infinity.json"
                        xtype="cqinclude"/>

                <secondaryImageTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/images/items/secondaryImageTab.infinity.json"
                        xtype="cqinclude"/>

                <secondaryImageTabResourceType
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/images/items/secondaryImageTabResourceType.infinity.json"
                        xtype="cqinclude"/>

                <styleTab jcr:primaryType="cq:Panel"
                    path="/apps/aemdesign/global/dialog/classic/style/items/styleTab.infinity.json"
                    xtype="cqinclude" />
                <accessibilityTab jcr:primaryType="cq:Panel"
                                  path="/apps/aemdesign/global/dialog/classic/accessibility/items/accessibilityTab.infinity.json"
                                  xtype="cqinclude" />

            </items>
        </tabs>
    </items>
</jcr:root>
