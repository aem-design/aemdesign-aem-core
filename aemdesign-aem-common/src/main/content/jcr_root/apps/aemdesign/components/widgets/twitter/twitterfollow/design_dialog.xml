<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Twitter Follow Button (Design)"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <user
            jcr:primaryType="cq:Widget"
            fieldLabel="User"
            maxLength="16"
            name="./user"
            xtype="textfield"/>
        <showusername
            jcr:primaryType="cq:Widget"
            defaultValue="true"
            fieldLabel="Show username"
            inputValue="true"
            name="./showUsername"
            type="checkbox"
            xtype="selection"/>
        <largebutton
            jcr:primaryType="cq:Widget"
            fieldLabel="Large button"
            inputValue="true"
            name="./largeButton"
            type="checkbox"
            xtype="selection"/>
    </items>
</jcr:root>
