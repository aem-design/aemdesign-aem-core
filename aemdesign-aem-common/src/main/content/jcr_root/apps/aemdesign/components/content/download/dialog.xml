<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:rep="internal"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#Download"
          title="Download"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <downloadTab
                        jcr:primaryType="cq:Widget"
                        title="File Download"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <file
                                jcr:primaryType="cq:Widget"
                                allowUpload="{Boolean}false"
                                allowBlank="{Boolean}true"
                                autoUploadDelay="1"
                                ddGroups="[media]"
                                fieldLabel="Download File"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./fileReference"
                                name="./file"
                                xtype="html5smartfile"/>
                    </items>
                </downloadTab>

                <layoutTab
                        jcr:primaryType="cq:Panel"
                        border="false"
                        height=""
                        title="Layout"
                        width=""
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <variant
                                jcr:primaryType="cq:Widget"
                                collapsed="false"
                                collapsible="false"
                                title="Layout"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <variant
                                        jcr:primaryType="cq:Widget"
                                        type="select"
                                        defaultValue=""
                                        fieldLabel="Variant"
                                        allowBlank="{Boolean}true"
                                        name="./variant"
                                        value=""
                                        xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <default
                                                jcr:primaryType="nt:unstructured"
                                                value=""
                                                text="Default"/>
                                        <simple
                                                jcr:primaryType="nt:unstructured"
                                                value="simple"
                                                text="Simple"/>
                                        <card
                                                jcr:primaryType="nt:unstructured"
                                                value="card"
                                                text="Card"/>
                                    </options>
                                </variant>
                            </items>
                        </variant>
                        <info
                                jcr:primaryType="cq:Widget"
                                collapsed="false"
                                collapsible="false"
                                title="Info"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <title
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Title"
                                        name="./title"
                                        fieldDescription="Set image title, does not apply to Licensed Assets"
                                        xtype="textfield"/>

                                <description
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Description"
                                        fieldDescription="Set image description, does not apply to Licensed Assets"
                                        name="./description"
                                        xtype="textarea"/>

                            </items>
                        </info>

                        <thumbnailStyle
                                jcr:primaryType="cq:Widget"
                                title="Thumbnail"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <thumbnail
                                        jcr:primaryType="cq:Widget"
                                        defaultValue=""
                                        fieldLabel="Thumbnail Type"
                                        fieldDescription="Pick type of thumbnail to use for download. List in order of Custom Thumbnail Rendition will generate a new thumbnail image."
                                        name="./thumbnailType"
                                        allowBlank="{Boolean}true"
                                        value=""
                                        type="select"
                                        xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <default
                                                jcr:primaryType="nt:unstructured"
                                                value=""
                                                text="Default"/>
                                        <icon
                                                jcr:primaryType="nt:unstructured"
                                                value="icon"
                                                text="Icon"/>
                                        <dam
                                                jcr:primaryType="nt:unstructured"
                                                value="dam"
                                                text="Asset DAM Rendition"/>
                                        <customdam
                                                jcr:primaryType="nt:unstructured"
                                                value="customdam"
                                                text="Thumbnail DAM Rendition"/>
                                        <custom
                                                jcr:primaryType="nt:unstructured"
                                                value="custom"
                                                text="Custom Thumbnail Rendition"/>
                                    </options>
                                </thumbnail>

                                <size
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Icon Size (w,h)"
                                        fieldDescription="blank values are not added as attributes"
                                        heightParameter="./thumbnailHeight"
                                        widthParameter="./thumbnailWidth"
                                        xtype="sizefield"/>
                            </items>
                        </thumbnailStyle>

                    </items>
                </layoutTab>

                <imageThumbnailTab
                        jcr:primaryType="cq:Widget"
                        allowUpload="{Boolean}false"
                        name="./thumbnail/file"
                        title="Thumbnail"
                        ddGroups="[media]"
                        cropParameter="./thumbnail/imageCrop"
                        fileNameParameter="./thumbnail/fileName"
                        fileReferenceParameter="./thumbnail/fileReference"
                        rotateParameter="./thumbnail/imageRotate"
                        mapParameter="./thumbnail/imageMap"
                        xtype="html5smartimage">
                    <cropConfig jcr:primaryType="nt:unstructured">
                        <aspectRatios jcr:primaryType="nt:unstructured">
                            <freehand
                                    jcr:primaryType="nt:unstructured"
                                    value="0,0"
                                    text="Free hand"/>
                            <twobythree
                                    jcr:primaryType="nt:unstructured"
                                    value="2,3"
                                    text="2 x 3"/>
                            <threebyfive
                                    jcr:primaryType="nt:unstructured"
                                    value="3,5"
                                    text="3 x 5"/>
                            <sixteenbynine
                                    jcr:primaryType="nt:unstructured"
                                    value="16,9"
                                    text="16 x 9"/>
                            <square
                                    jcr:primaryType="nt:unstructured"
                                    value="1,1"
                                    text="Square"/>
                        </aspectRatios>
                    </cropConfig>
                </imageThumbnailTab>

                <imageThumbnailTabResourceType
                        jcr:primaryType="cq:Panel"
                        title="Thumbnail Image Metadata"
                        fieldDescription="Thumbnail Image Metadata additional fields for saving content of Background Image"
                        xtype="panel">
                    <listeners
                            jcr:primaryType="nt:unstructured"
                            render="function() { AEMDESIGN.dialog.hideTab(this, this.findParentByType('dialog').findByType('tabpanel')[0]); }"/>
                    <items jcr:primaryType="cq:WidgetCollection">
                        <imageBackgroundTabResourceType
                                jcr:primaryType="cq:Widget"
                                ignoreData="{Boolean}true"
                                name="./thumbnail/sling:resourceType"
                                value="aemdesign/components/media/image"
                                xtype="textfield"/>
                    </items>
                </imageThumbnailTabResourceType>

                <styleTab
                        jcr:primaryType="cq:Panel"
                        path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                        xtype="cqinclude"/>
                <accessibilityTab jcr:primaryType="cq:Panel"
                                  path="/apps/aemdesign/global/dialog/classic/common/items/accessibilityTab.infinity.json"
                                  xtype="cqinclude"/>
                <analyticsTab jcr:primaryType="cq:Panel"
                              path="/apps/aemdesign/global/dialog/classic/analytics/items/common.infinity.json"
                              xtype="cqinclude" />
            </items>
        </tabs>
    </items>
</jcr:root>
