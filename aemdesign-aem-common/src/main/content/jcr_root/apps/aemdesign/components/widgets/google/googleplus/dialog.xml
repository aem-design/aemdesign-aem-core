<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Google+"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
                        <dataHref
                            jcr:primaryType="cq:Widget"
                            fieldLabel="URL"
                            name="./data-href"
                            xtype="textfield" />
                        <dataSize
                            jcr:primaryType="cq:Widget"
                            defaultValue="medium"
                            fieldLabel="Size"
                            name="./data-size"
                            type="select"
                            xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <small
                                            jcr:primaryType="nt:unstructured"
                                            value="small"
                                            text="Small" />
                                    <medium
                                            jcr:primaryType="nt:unstructured"
                                            value="medium"
                                            text="Medium" />                                    
                                     <standard
                                            jcr:primaryType="nt:unstructured"
                                            value="standard"
                                            text="Standard" />                                    
                                     <tall
                                            jcr:primaryType="nt:unstructured"
                                            value="tall"
                                            text="Tall" />
                                </options>
                        </dataSize>
                        <dataAnnotation
                            jcr:primaryType="cq:Widget"
                            defaultValue="bubble"
                            fieldLabel="data-annotation"
                            name="./data-annotation"
                            type="select"
                            xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <none
                                            jcr:primaryType="nt:unstructured"
                                            value="none"
                                            text="None" />
                                    <bubble
                                            jcr:primaryType="nt:unstructured"
                                            value="bubble"
                                            text="Bubble" />                                    
                                     <inline
                                            jcr:primaryType="nt:unstructured"
                                            value="inline"
                                            text="Standard" />
                                </options>
                        </dataAnnotation>
    </items>
</jcr:root>