<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Image"
          helpPath=""
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                type="nav"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"/>
        <items jcr:primaryType="nt:unstructured">
            <imageTab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Image"
                    sling:resourceType="granite/ui/components/foundation/section">

                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <attributes
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Asset"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <file
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                            autoStart="{Boolean}false"
                                            class="cq-droptarget"
                                            fieldLabel="Image asset"
                                            fileNameParameter="./fileName"
                                            fileReferenceParameter="./fileReference"
                                            mimeTypes="[image]"
                                            multiple="{Boolean}false"
                                            name="./file"
                                            title="Image"
                                            uploadUrl="${suffix.path}"
                                            allowUpload="false"
                                            cropParameter="./imageCrop"
                                            mapParameter="./imageMap"
                                            requestSuffix=".img.png"
                                            rotateParameter="./imageRotate"
                                            useHTML5="{Boolean}true"/>
                                </items>
                            </attributes>
                        </items>
                    </column1>
                    <column2
                            jcr:primaryType="nt:unstructured"
                            class="u-coral-padding u-coral-noMargin"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <assetAttributes
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Asset Attributes"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="This field can include a shorthand reference for the asset primarily for identification."
                                            fieldLabel="Title"
                                            name="./dc:title"/>
                                    <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldDescription="The Description field should report the who, what and why of what the photograph depicts. "
                                            fieldLabel="Description"
                                            name="./dc:description"/>
                                    <headline
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="A headline is a brief, publishable synopsis or summary of the contents of the photograph."
                                            fieldLabel="Headline"
                                            name="./photoshop:Headline"/>
                                    <creditLine
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The Credit Line is a free-text field that specifies how to acknowledge the supplying person(s) and/or organization(s) when publishing the image."
                                            fieldLabel="Credit Line"
                                            name="./photoshop:Credit"/>
                                    <source
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The Source field should identify the original owner or copyright holder of the photograph. "
                                            fieldLabel="Source"
                                            name="./photoshop:Source"/>
                                    <sourceAsset
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Asset source destination, pick asset or enter external url)"
                                            fieldLabel="Asset URL"
                                            name="./sourceAsset"/>
                                </items>
                            </assetAttributes>
                        </items>
                    </column2>
                </items>
            </imageTab>
            <layoutTab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Layout"
                    sling:resourceType="granite/ui/components/foundation/section">

                <layout jcr:primaryType="nt:unstructured"
                        margin="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <layoutConfig
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Layout"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <variant
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            emptyOption="{Boolean}true"
                                            fieldLabel="Variant"
                                            class="cq-dialog-dropdown-showhide"
                                            cq-dialog-dropdown-showhide-target=".image-variant-showhide-target"
                                            name="./variant"
                                            value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <default
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Default"
                                                    value=""/>
                                            <imageOnly
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Image Only"
                                                    value="imageOnly"/>
                                            <imageCard
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Image Card"
                                                    value="card"/>
                                            <imageTitleDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Image with title &amp; description"
                                                    value="imageTitleDescription"/>
                                        </items>
                                    </variant>
                                    <imageOption
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            emptyOption="{Boolean}true"
                                            fieldDescription="Image selection options for rendering image"
                                            fieldLabel="Image Option"
                                            name="./imageOption"
                                            class="dialog-dropdown-showhide"
                                            dialog-dropdown-showhide-target=".image-imageoption-showhide-target"
                                            value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <default
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Default"
                                                    value=""/>
                                            <generated
                                                    jcr:primaryType="nt:unstructured"
                                                    valuealt="generated"
                                                    text="Generate: generate new image with current image edits"
                                                    value="generated"/>
                                            <rendition
                                                    jcr:primaryType="nt:unstructured"
                                                    valuealt="generated"
                                                    text="Rendition: pick a suitable image rendition"
                                                    value="rendition"/>
                                            <responsive
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Responsive: use existing renditions"
                                                    value="responsive"/>
                                            <adaptive
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Adaptive: generate new renditions with quality settings for each breakpoint"
                                                    value="adaptive"/>
                                        </items>
                                    </imageOption>
                                    <linkURL
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="link to page or external site"
                                            fieldLabel="Image Link URL"
                                            name="./linkURL"/>

                                </items>
                            </layoutConfig>

                        </items>
                    </column1>
                    <column2
                            jcr:primaryType="nt:unstructured"
                            class="u-coral-padding u-coral-noMargin"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">

                            <cardConfig
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    class="hide image-variant-showhide-target foundation-layout-util-vmargin"
                                    showhidetargetvalue="card">
                                <items jcr:primaryType="nt:unstructured">
                                    <cardConfig
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Card Config"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <thumbnailStyleHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/heading"
                                                    class="coral-Heading coral-Heading--4"
                                                    level="{Long}4"
                                                    text="Thumbnail"/>
                                            <thumbnailStyle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <thumbnailSize
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                                            fieldDescription="size of image thumbnail visible on the page"
                                                            fieldLabel="Thumbnail Size (w,h)">
                                                        <width
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./htmlWidth"/>
                                                        <height
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./htmlHeight"/>
                                                    </thumbnailSize>
                                                </items>
                                            </thumbnailStyle>

                                            <cardConfigHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/heading"
                                                    class="coral-Heading coral-Heading--4"
                                                    level="{Long}4"
                                                    text="Card Config"/>
                                            <cardConfig
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <titleType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                                            emptyOption="{Boolean}true"
                                                            fieldDescription="which paragraph tag to use for Title display"
                                                            fieldLabel="Title Type"
                                                            name="./titleType"
                                                            value="">
                                                        <items jcr:primaryType="nt:unstructured"/>
                                                    </titleType>
                                                </items>
                                            </cardConfig>

                                        </items>
                                    </cardConfig>
                                </items>
                            </cardConfig>

                            <imageConfig
                                    jcr:primaryType="nt:unstructured"
                                    class="hide image-imageoption-showhide-target foundation-layout-util-vmargin"
                                    showhidetargetvalue="generated"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <imageConfig
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Image Config"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">

                                            <imageDimensionHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/heading"
                                                    class="coral-Heading coral-Heading--4"
                                                    level="{Long}4"
                                                    text="Image Dimension"/>
                                            <imageDimension
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imageSize
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                                            fieldDescription=""
                                                            fieldLabel="Image Size">
                                                        <width
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./width"/>
                                                        <height
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./height"/>
                                                    </imageSize>
                                                </items>
                                            </imageDimension>

                                            <resizingProportionsHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/heading"
                                                    class="coral-Heading coral-Heading--4"
                                                    level="{Long}4"
                                                    text="Resizing Proportions"/>
                                            <resizingProportions
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <min
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                                            fieldLabel="Minimal Size">
                                                        <width
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./minWidth"/>
                                                        <height
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./minHeight"/>
                                                    </min>
                                                    <max
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                                            fieldLabel="Maximal Size">
                                                        <width
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./maxWidth"/>
                                                        <height
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                name="./maxHeight"/>
                                                    </max>
                                                </items>
                                            </resizingProportions>
                                        </items>
                                    </imageConfig>

                                </items>
                            </imageConfig>
                            <responsiveConfig
                                    jcr:primaryType="nt:unstructured"
                                    class="hide image-imageoption-showhide-target foundation-layout-util-vmargin"
                                    showhidetargetvalue="responsive"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <responsiveConfig
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Responsive Config"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">

                                            <responsiveRenditionSizeHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/heading"
                                                    class="coral-Heading coral-Heading--4"
                                                    level="{Long}4"
                                                    text="Responsive Rendition"/>

                                            <responsiveRenditionSize
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <responsiveImageMapping
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            fieldDescription="rendition width = media query, &lt;br> &lt;br> ex 48=(min-width: 1px) and (max-width: 100px), this will show rendition of 48px between 1px and 100px device width &lt;br>&lt;br>  ex 1280=(min-width: 478px) will use rendition 1280 starting from width of 487 and up"
                                                            fieldLabel="Rendition Image Mapping">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                                    </responsiveImageMapping>
                                                </items>
                                            </responsiveRenditionSize>

                                            <renditionPrefix
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    emptyOption="{Boolean}true"
                                                    fieldDescription="Rendition prefix to use as priority for selecting renditions, otherwise best match will be returned"
                                                    fieldLabel="Rendition Prefix"
                                                    name="./renditionPrefix"
                                                    value="">
                                                <items jcr:primaryType="nt:unstructured"/>
                                            </renditionPrefix>
                                        </items>
                                    </responsiveConfig>
                                </items>
                            </responsiveConfig>

                            <adaptiveConfig
                                    jcr:primaryType="nt:unstructured"
                                    class="hide image-imageoption-showhide-target foundation-layout-util-vmargin"
                                    showhidetargetvalue="adaptive"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <adaptiveConfig
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Adaptive Config"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">

                                            <adaptiveRenditionSize
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/heading"
                                                    class="coral-Heading coral-Heading--4"
                                                    level="{Long}4"
                                                    text="Responsive Rendition"/>

                                            <adaptiveRenditionSize
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <adaptiveImageMapping
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            fieldDescription="width.quality.format = media query, &lt;br> &lt;br> ex 480.medium=(min-width: 1px) and (max-width: 533px), this will show rendition of 48px between 1px and 533px device width &lt;br>&lt;br>  ex full=(min-width: 1332px) will create a close to original rendition"
                                                            fieldLabel="Adaptive Image Mapping">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                                    </adaptiveImageMapping>
                                                </items>
                                            </adaptiveRenditionSize>
                                        </items>
                                    </adaptiveConfig>
                                </items>
                            </adaptiveConfig>

                        </items>
                    </column2>
                </items>
            </layoutTab>
            <styleTab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Style"
                    path="/apps/aemdesign/global/dialog/touch/style/content/items/styleTab"
                    resourceType="granite/ui/components/foundation/section"
                    sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <accessibilityTab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Accessibility"
                    path="/apps/aemdesign/global/dialog/touch/accessibility/content/items/accessibilityTab"
                    resourceType="granite/ui/components/foundation/section"
                    sling:resourceType="granite/ui/components/coral/foundation/include"/>
            <analyticsTab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Analytics"
                    path="/apps/aemdesign/global/dialog/touch/analytics/content/items/analyticsTab"
                    resourceType="granite/ui/components/foundation/section"
                    sling:resourceType="granite/ui/components/coral/foundation/include"/>
        </items>
    </content>
</jcr:root>