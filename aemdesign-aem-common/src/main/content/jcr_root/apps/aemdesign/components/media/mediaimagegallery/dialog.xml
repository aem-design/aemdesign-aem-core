<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Media Image Gallery"
    xtype="dialog">

    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">

                <!-- basic information tab -->
                <tab_basic jcr:primaryType="cq:Panel" title="Basic">

                    <items jcr:primaryType="cq:WidgetCollection">

                        <gallery
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Gallery folder"
                            name="./galleryLocation"
                            rootPath="/content/dam"
                            fieldDescription="The folder of the gallery to display"
                            xtype="pathfield" />

                        <css
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS Class name"
                                name="./cssClass"
                                xtype="textfield"/>


                        <sortTags
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Sort Tags/Keywords"
                                name="./sortTags"
                                namespaces="[]"
                                fieldDescription="The folder of the sort list tags"
                                xtype="tags"/>

                        <filterTags
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Filter Tags/Keywords"
                                name="./filterTags"
                                namespaces="[]"
                                fieldDescription="The folder of the filter list tags"
                                xtype="tags"/>

                        <dropdownFilterTags
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Dropdown Filter Tags/Keywords"
                                name="./dropdownFilterTags"
                                namespaces="[]"
                                fieldDescription="The folder of the filter list tags in a dropdown"
                                xtype="tags"/>


                        <showPrices
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Show Prices"
                                checked="false"
                                defaultValue="false"
                                type="checkbox"
                                name="./showPrices"
                                xtype="selection" />



                        <galleryType
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                fieldLabel="galleryType"
                                name="./galleryType"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <list
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="standard" />
                                <gallery
                                        jcr:primaryType="nt:unstructured"
                                        value="showRoomGallery"
                                        text="the showRoomGallery" />
                                <gallery1
                                        jcr:primaryType="nt:unstructured"
                                        value="showRoomGalleryTiny"
                                        text="the showRoomGallery Tiny" />
                                <gallery2
                                        jcr:primaryType="nt:unstructured"
                                        value="showRoomGalleryMagicSeats"
                                        text="the showRoom Gallery Magic Seats" />
                                <gallery3
                                        jcr:primaryType="nt:unstructured"
                                        value="carLandingGallery"
                                        text="the cars landing Gallery" />
                                <gallery4
                                        jcr:primaryType="nt:unstructured"
                                        value="carLandingSmallGallery"
                                        text="the small cars landing Gallery" />
                            </options>
                        </galleryType>

                    </items>

                </tab_basic>

                <gallery
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/gallery.infinity.json"
                        xtype="cqinclude" />
                <slider-config
                        jcr:primaryType="cq:Widget"
                        title="Config"
                        xtype="panel">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <sliderModules
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Modules"
                                    name="./sliderModules"
                                    xtype="textfield"/>
                        </items>
                </slider-config>
            </items>
        </tabs>
    </items>


</jcr:root>
