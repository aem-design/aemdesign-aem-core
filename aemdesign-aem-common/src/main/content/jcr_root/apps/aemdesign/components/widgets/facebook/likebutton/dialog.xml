<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Facebook Like Button"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <url
            jcr:primaryType="cq:Widget"
            fieldDescription="Leave empty to use the current page."
            fieldLabel="URL to Like"
            name="./url"
            xtype="textfield"/>
        <layout
            jcr:primaryType="cq:Widget"
            fieldLabel="Layout Style"
            name="./layout"
            type="select"
            defaultValue="button_count"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
                <standard
                    jcr:primaryType="nt:unstructured"
                    text="Standard"
                    value="standard"/>
                <button
                    jcr:primaryType="nt:unstructured"
                    text="Button with count"
                    value="button_count"/>
                <box
                    jcr:primaryType="nt:unstructured"
                    text="Box with count"
                    value="box_count"/>
            </options>
        </layout>
        <hideSummary
                jcr:primaryType="cq:Widget"
                allowBlank="{Boolean}true"
                fieldLabel="Include Send button"
                name="./includeSend"
                options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                type="select"
                defaultValue=""
                value=""
                xtype="selection"/>
    </items>
</jcr:root>