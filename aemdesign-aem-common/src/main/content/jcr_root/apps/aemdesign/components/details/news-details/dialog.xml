<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          description="News Details is to save additional info for the Page Properties"
          title="News Details"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <!-- basic information tab -->
                <contentTab jcr:primaryType="cq:Panel"
                         title="News Details">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <title
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageBasicTab/items/title.infinity.json"
                                xtype="cqinclude"/>
                        <description
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageBasicTab/items/description.infinity.json"
                                xtype="cqinclude"/>
                        <publishDate
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Publish Date"
                                allowBlank="{Boolean}true"
                                defaultValue=""
                                format="d.m.Y"
                                name="./publishDate"
                                hideTime="{Boolean}true"
                                xtype="datetime"/>
                        <publishDateHint
                                jcr:primaryType="cq:Widget"
                                ignoreData="{Boolean}true"
                                name="./publishDate@TypeHint"
                                value="Date"
                                xtype="hidden"/>
                        <category
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageBasicTab/items/category.infinity.json"
                                xtype="cqinclude"/>
                        <mixinTypes
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageBasicTab/items/mixinTypes.infinity.json"
                                xtype="cqinclude"/>

                        <mixinTypesHint
                                jcr:primaryType="cq:Widget"
                                path="/apps/aemdesign/global/dialog/classic/common/items/pageBasicTab/items/mixinTypesHint.infinity.json"
                                xtype="cqinclude"/>
                    </items>
                </contentTab>

                <layoutTab
                        jcr:primaryType="cq:Panel"
                        path="/apps/aemdesign/components/details/page-details/dialog/items/tabs/items/layoutTab.infinity.json"
                        xtype="cqinclude"/>

                <advancedTab jcr:primaryType="cq:Panel"
                             path="/apps/aemdesign/global/dialog/classic/common/items/pageAdvancedTab.infinity.json"
                             xtype="cqinclude" />

                <styleTab
                        jcr:primaryType="cq:Panel"
                        path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                        xtype="cqinclude"/>
            </items>
        </tabs>
    </items>
</jcr:root>