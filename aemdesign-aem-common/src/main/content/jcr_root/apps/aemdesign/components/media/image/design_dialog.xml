<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:rep="internal"
          helpPath="en/cq/current/wcm/default_components.html#Text"
          jcr:primaryType="cq:Dialog"
              jcr:mixinTypes="[rep:AccessControllable]"
          title="Image (Design)"
          width="800"
          xtype="dialog">

    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <layoutTab
                        jcr:primaryType="cq:Widget"
                        title="Layout"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <fixedImageGeneratedSize
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}false"
                                collapsible="{Boolean}true"
                                fieldDescription="Note: This settings are only applied to Fixed Image Generated which is selected in Image Option at author dialog."
                                fieldLabel=" "
                                title="Fixed Image Generated"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:Widget"
                                path="/libs/foundation/components/image/design_dialog/items.infinity.json"
                                xtype="cqinclude" />
                        </fixedImageGeneratedSize>
                        <!--
                        <responsiveGeneratedSize
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}false"
                                collapsible="{Boolean}true"
                                fieldDescription="Note: This settings are only applied to Responsive Generated which is selected in Image Option at author dialog."
                                fieldLabel=" "
                                title="Responsive Generated"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">

                                <responsiveImageMapping jcr:primaryType="cq:Widget"
                                                        addItemLabel="Add a new entry into the Map"
                                                        value=""
                                                        fieldDescription="adaptive profile (width.quality)=min-width e.g. 320.medium=320 "
                                                        fieldLabel="Adaptive Image Mapping"
                                                        name="./adaptiveImageMapping"
                                                        orderable="{Boolean}true"
                                                        xtype="multifield"/>
                            </items>
                        </responsiveGeneratedSize>
                        -->
                        <responsiveRenditionSize
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}false"
                                collapsible="{Boolean}true"
                                fieldDescription="Note: This settings are only applied to Responsive Rendition or Responsive Rendition Override which is selected in Image Option at author dialog."
                                fieldLabel=" "
                                title="Responsive Rendition"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">

                                <responsiveImageMapping jcr:primaryType="cq:Widget"
                                                        addItemLabel="Add a new entry into the Map"
                                                        value=""
                                                        fieldDescription="rendition (width)=min-width e.g. 48=360 "
                                                        fieldLabel="Rendition Image Mapping"
                                                        name="./renditionImageMapping"
                                                        orderable="{Boolean}true"
                                                        xtype="multifield"/>
                            </items>
                        </responsiveRenditionSize>
                    </items>
                </layoutTab>
                <styleTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                        xtype="cqinclude" />
            </items>
        </tabs>
    </items>

    <rep:policy jcr:primaryType="rep:ACL">
        <deny jcr:primaryType="rep:DenyACE"
              rep:principalName="contributor"
              rep:privileges="{Name}[jcr:read]"/>
    </rep:policy>
</jcr:root>