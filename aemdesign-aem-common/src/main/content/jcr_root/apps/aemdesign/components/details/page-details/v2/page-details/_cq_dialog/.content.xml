<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page Details"
          helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/aemdesign/components/details/page-details/v2/page-details"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[aem.design.components.author.pagedetails,aem.design.components.coral.widgets.form.assetoptions]">
    <content
        granite:id="dialog-pagedetails"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>

        <items jcr:primaryType="nt:unstructured">
            <pageDetails
                jcr:primaryType="nt:unstructured"
                jcr:title="Page Details"
                path="/apps/aemdesign/global/dialog/touch/page/content/items/pageBasicTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <layoutTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Layout"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                        margin="{Boolean}false"/>

                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <variant
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Layout"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <variant
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        fieldLabel="Variant"
                                        name="./variant"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <default
                                                jcr:primaryType="nt:unstructured"
                                                text="Default"
                                                value=""/>
                                            <hidden
                                                jcr:primaryType="nt:unstructured"
                                                text="Hidden"
                                                value="hidden"/>
                                        </items>
                                    </variant>
                                </items>
                            </variant>

                            <displayOptions
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Display Options"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <showBreadcrumb
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Toggle the breadcrumbs component off/on."
                                        fieldLabel="Show Breadcrumbs"
                                        name="./showBreadcrumb"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </showBreadcrumb>

                                    <showToolbar
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Toggle the toolbar component off/on."
                                        fieldLabel="Show Toolbar"
                                        name="./showToolbar"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </showToolbar>

                                    <showPageDate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Toggle the page date component off/on."
                                        fieldLabel="Show Page Date"
                                        name="./showPageDate"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </showPageDate>

                                    <showParsys
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Show a parsys component to author additional content"
                                        fieldLabel="Show Parsys"
                                        name="./showParsys"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </showParsys>

                                    <hideTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Prevent the title from appearing on the page."
                                        fieldLabel="Hide Title"
                                        name="./hideTitle"
                                        emptyOption="{Boolean}false"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </hideTitle>

                                    <hideDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Prevent the description from appearing on the page."
                                        fieldLabel="Hide Description"
                                        name="./hideDescription"
                                        emptyOption="{Boolean}false"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/common/true-false"/>
                                    </hideDescription>
                                </items>
                            </displayOptions>

                            <titleFormat
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Title Format"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <titleType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Which type of heading should be used for the title?"
                                        fieldLabel="Title Type"
                                        name="./titleType"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="valuelist"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-dialog/html/heading"/>
                                    </titleType>

                                    <titleFormat
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Define a custom title formatter that generates custom output."
                                        fieldLabel="Title Format"
                                        name="./titleFormat"
                                        emptyOption="{Boolean}true"
                                        value="">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="aemdesign/components/coral/datasources/tags"
                                            variant="tagidvalue"
                                            path="/content/cq:tags/${(empty tenant.id and empty tenantId) ? 'aemdesign' : (empty tenant.id ? tenantId : tenant.id )}/component-style-theme/details/page-details/format/title"/>
                                    </titleFormat>
                                </items>
                            </titleFormat>
                        </items>
                    </column>
                </items>
            </layoutTab>

            <badgeConfigTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Badge Config"
                path="/apps/aemdesign/global/dialog/touch/badge/content/items/tabs/items/badgeConfigTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <imageBackgroundTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Background Image"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/imageBackgroundTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <thumbnailImageTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Thumbnail"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/thumbnailImageTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <secondaryImageTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Secondary Thumbnail"
                path="/apps/aemdesign/global/dialog/touch/asset/content/items/secondaryImageTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <styleTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Style"
                path="/apps/aemdesign/global/dialog/touch/style/content/items/tabs/items/styleTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <accessibilityTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Accessibility"
                path="/apps/aemdesign/global/dialog/touch/accessibility/content/items/tabs/items/accessibilityTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <analyticsTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Analytics"
                path="/apps/aemdesign/global/dialog/touch/analytics/content/items/tabs/items/analyticsTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <pageAnalyticsTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Page Analytics"
                path="/apps/aemdesign/global/dialog/touch/pageAnalytics/content/items/pageAnalyticsTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>

            <pageMetadataTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Page Metadata"
                path="/apps/aemdesign/global/dialog/touch/pageMetadata/content/items/pageMetadataTab"
                resourceType="granite/ui/components/foundation/section"
                sling:resourceType="granite/ui/components/coral/foundation/include"/>
        </items>
    </content>

</jcr:root>
