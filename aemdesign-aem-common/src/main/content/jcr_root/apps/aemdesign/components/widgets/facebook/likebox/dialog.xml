                </tab_basic>
                <tab-text
                    jcr:primaryType="cq:Widget"
                    anchor="100%"
                    title="Text"
                    xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <text-full
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/text-full.infinity.json"
                        xtype="cqinclude" />
                    </items>
                </tab-text>
                <tab2
                        jcr:primaryType="cq:Widget"
                        allowUpload="{Boolean}false"
                        cropParameter="./imageCrop"
                        ddGroups="[media]"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        mapParameter="./imageMap"
                        name="./file"
                        rotateParameter="./imageRotate"
                        sizeLimit="100"
                        title="Image"
                        xtype="html5smartimage"/>

                <styleTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/common/items/styleTab.infinity.json"
                        xtype="cqinclude" />

                <advancedStyle
                        jcr:primaryType="cq:Panel"
                        title="Advanced CSS">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <cssClassHeader
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS Class for Header"
                                name="./cssClassHeader"
                                xtype="textfield"/>
                        <cssClassImage
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS Class for Image"
                                name="./cssClassImage"
                                xtype="textfield"/>
                        <cssClassFBFeed
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS Class for Facebook Feed"
                                name="./cssClassFBFeed"
                                xtype="textfield"/>
                    </items>
                </advancedStyle>
