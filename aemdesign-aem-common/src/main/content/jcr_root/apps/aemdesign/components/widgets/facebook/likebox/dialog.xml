                                jcr:primaryType="cq:Widget"
                                fieldLabel="Allow Transparency"
                                name="./allowTransparency"
                                type="radio"
                                defaultValue="true"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <true
                                            jcr:primaryType="nt:unstructured"
                                            text="Yes"
                                            value="true"/>
                                    <false
                                            jcr:primaryType="nt:unstructured"
                                            text="No"
