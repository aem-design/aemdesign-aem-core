<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:rep="internal"
    jcr:primaryType="cq:Dialog"
    title="Main Navigation Configuration - Default"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <inheritTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/components/admin/inherit/dialog/items/tabs/items/inheritTab.infinity.json"
                        xtype="cqinclude" />
                <tab_main_nav
                    jcr:primaryType="cq:Panel"
                    title="Select Navigation Page">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <menuPages
                                jcr:primaryType="cq:Widget"
                                fieldDescription="These links will be the menu tabs"
                                fieldLabel="Menu Pages"
                                name="./menuPages"
                                xtype="multifield">
                            <fieldConfig
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}true"
                                    width="155"
                                    xtype="pathfield"/>
                        </menuPages>
                    </items>
                </tab_main_nav>
                <tab-advanced-css
                        jcr:primaryType="cq:Panel"
                        title="Advanced CSS">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <nav
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS for Nav"
                                name="./cssClassNav"
                                xtype="textfield"/>
                        <navcontainer
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS for Nav Container"
                                name="./cssClassContainer"
                                xtype="textfield"/>
                        <list
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS for List"
                                name="./cssClassList"
                                xtype="textfield"/>
                        <item
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS for Item"
                                name="./cssClassItem"
                                xtype="textfield"/>
                        <itemlink
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS for Item Link"
                                name="./cssClassItemLink"
                                xtype="textfield"/>
                        <subnav
                                jcr:primaryType="cq:Widget"
                                fieldLabel="CSS for Sub Nav"
                                name="./cssClassSubNav"
                                xtype="textfield"/>
                    </items>
                </tab-advanced-css>
            </items>
        </tabs>
    </items>
    <rep:policy jcr:primaryType="rep:ACL">
        <deny
                jcr:primaryType="rep:DenyACE"
                rep:principalName="contributor"
                rep:privileges="{Name}[jcr:read]" />
    </rep:policy>
</jcr:root>
