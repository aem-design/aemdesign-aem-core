<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          title="External"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <externalTab
                        jcr:primaryType="cq:Widget"
                        title="External"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <target
                                jcr:primaryType="cq:Widget"
                                path="/libs/foundation/components/external/dialog/items/target.infinity.json"
                                xtype="cqinclude"/>
                        <!-- Set a default value for OOTB behaviour -->
                        <passparams
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Pass parameters"
                                defaultValue="{Boolean}true"
                                value="{Boolean}true"
                                allowBlank="{Boolean}false"
                                name="./passparams"
                                xtype="hidden"/>
                        <widthheight
                                jcr:primaryType="cq:Widget"
                                path="/libs/foundation/components/external/dialog/items/widthheight.infinity.json"
                                xtype="cqinclude"/>
                        <showScrollbars
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}true"
                                fieldLabel="Show scrollbars"
                                options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                name="./showScrollbar"
                                type="select"
                                xtype="selection"/>
                    </items>
                </externalTab>
                <layoutTab
                        jcr:primaryType="cq:Widget"
                        title="Layout"
                        xtype="panel">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <variant
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}true"
                                fieldLabel="Variant"
                                name="./variant"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="Default"/>
                            </options>
                        </variant>
                    </items>
                </layoutTab>
                <styleTab
                        jcr:primaryType="cq:Widget"
                        path="/apps/aemdesign/global/dialog/classic/style/items/styleTab.infinity.json"
                        xtype="cqinclude"/>
                <accessibilityTab jcr:primaryType="cq:Panel"
                                  path="/apps/aemdesign/global/dialog/classic/accessibility/items/accessibilityTab.infinity.json"
                                  xtype="cqinclude" />

            </items>
        </tabs>
    </items>
</jcr:root>
