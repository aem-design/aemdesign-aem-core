<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#List"
          title="Common Fields for Badge Config"
          xtype="tabpanel">

    <items jcr:primaryType="cq:WidgetCollection">



        <badgeConfigTab jcr:primaryType="cq:Panel"
                         title="Badge Config">
            <items jcr:primaryType="cq:WidgetCollection">
                <descriptionLabel
                        jcr:primaryType="cq:Widget"
                        html="&lt;span style=&quot;color: blue; font-weight: bold; &quot;>This config is used in Badges to display content in other components&lt;/span>"
                        xtype="label"/>


                <titleConfigGroup
                        jcr:primaryType="cq:Widget"
                        title="Title Configuration"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <titleConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Title display options, applies to default badge and other components"
                                xtype="label"/>

                        <titleIconShow jcr:primaryType="cq:Widget"
                                fieldLabel="Show Title Icon"
                                fieldDescription="show icon with title"
                                allowBlank="{Boolean}true"
                                name="./titleIconShow"
                                options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                type="select"
                                defaultValue=""
                                xtype="selection"/>

                        <titleIcon jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue=""
                                value=""
                                fieldLabel="Title Icon"
                                fieldDescription="When showing this page links show this Icon"
                                name="./titleIcon"
                                namespaces="[component-style-icon]"
                                xtype="tags"/>

                    </items>
                </titleConfigGroup>

                <cardConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Card Badge Config"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <cardConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Card config used in lists"
                                xtype="label"/>

                        <cardIconShow jcr:primaryType="cq:Widget"
                                       fieldLabel="Show Card Icon"
                                       fieldDescription="show icon instead of page image"
                                       allowBlank="{Boolean}true"
                                       name="./cardIconShow"
                                       options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                       type="select"
                                       defaultValue=""
                                       xtype="selection"/>

                        <cardIcon jcr:primaryType="cq:Widget"
                                   allowBlank="{Boolean}true"
                                   defaultValue=""
                                   value=""
                                   fieldLabel="Card Icon"
                                   fieldDescription="When showing this page as card badge use this Icon"
                                   name="./cardIcon"
                                   namespaces="[component-style-icon,component-style-modifier]"
                                   xtype="tags"/>

                        <cardStyle jcr:primaryType="cq:Widget"
                                   allowBlank="{Boolean}true"
                                   defaultValue=""
                                   value=""
                                   fieldLabel="Card Style"
                                   fieldDescription="Apply this style to card badge"
                                   name="./cardStyle"
                                   namespaces="[component-style-theme,component-style-modifier]"
                                   xtype="tags"/>

                        <cardSize jcr:primaryType="cq:Widget"
                                  fieldLabel="Card Size"
                                  fieldDescription="this will be used as card size in grids"
                                  allowBlank="{Boolean}true"
                                  name="./cardSize"
                                  options="/etc/tags/component-style-theme/common/card/size.valuelist.json"
                                  type="select"
                                  defaultValue=""
                                  value=""
                                  xtype="selection"/>

                    </items>
                </cardConfigGroup>

                <badgeConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="General Badge Config"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <badgeConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Config how Title and Summary should be treated"
                                xtype="label"/>

                        <badgeTitleType jcr:primaryType="cq:Widget"
                                fieldLabel="Badge Title Type"
                                fieldDescription="which paragraph tag to use for Badge Title display"
                                allowBlank="{Boolean}true"
                                name="./badgeTitleType"
                                options="/etc/tags/component-dialog/html/heading.valuelist.json"
                                type="select"
                                defaultValue=""
                                value=""
                                xtype="selection"/>

                        <badgeTitleTrim
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}true"
                                fieldLabel="Title Trim"
                                fieldDescription="apply trim on Title field"
                                options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                name="./badgeTitleTrim"
                                type="select"
                                xtype="selection"/>
                        <badgeTitleTrimLengthMax
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Title Max Length"
                                fieldDescription="crop Title text after this many characters"
                                name="./badgeTitleTrimLengthMax"
                                xtype="numberfield"/>
                        <badgeTitleTrimLengthMaxSuffix
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Title Max Length Suffix"
                                fieldDescription="add the following text as suffix when cropping Title"
                                name="./badgeTitleTrimLengthMaxSuffix"
                                xtype="textfield"/>
                        <badgeSummaryTrim
                                jcr:primaryType="cq:Widget"
                                defaultValue=""
                                value=""
                                allowBlank="{Boolean}true"
                                fieldLabel="Summary Trim"
                                fieldDescription="apply trim on Summary field"
                                options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                name="./badgeSummaryTrim"
                                type="select"
                                xtype="selection"/>
                        <badgeSummaryLengthMax
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Summary Max Length"
                                fieldDescription="crop Summary text after this many characters"
                                name="./badgeSummaryLengthMax"
                                xtype="numberfield"/>
                        <badgeSummaryLengthMaxSuffix
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Summary Max Length Suffix"
                                fieldDescription="add the following text as suffix when cropping Summary"
                                name="./badgeSummaryLengthMaxSuffix"
                                xtype="textfield"/>

                    </items>
                </badgeConfigGroup>

                <linkConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Badge CTA Config"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <badgeConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Config CTA style"
                                xtype="label"/>

                        <badgeLinkTarget jcr:primaryType="cq:Widget"
                                fieldLabel="Card CTA Target"
                                fieldDescription="how should the link of items behave when clicked"
                                allowBlank="{Boolean}true"
                                name="./badgeLinkTarget"
                                options="/etc/tags/component-dialog/html/linktarget.valuelist.json"
                                type="select"
                                defaultValue=""
                                xtype="selection"/>
                        <badgeLinkText
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Card CTA Text"
                                fieldDescription="shows as a link visible text"
                                name="./badgeLinkText"
                                xtype="textfield"/>
                        <badgeLinkTitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Card CTA Title"
                                fieldDescription="shows as a link alt title"
                                name="./badgeLinkTitle"
                                xtype="textfield"/>
                        <badgeLinkStyle jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue=""
                                value=""
                                fieldLabel="Card CTA Style"
                                fieldDescription="The type of button that should appear on the card"
                                name="./badgeLinkStyle"
                                namespaces="[component-style-theme,component-style-modifier]"
                                xtype="tags"/>

                    </items>
                </linkConfigGroup>

                <iconConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Icon Badge Config"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <iconConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="General icon for use in Icon Badge and other components"
                                xtype="label"/>


                        <pageIcon jcr:primaryType="cq:Widget"
                                     allowBlank="{Boolean}true"
                                     defaultValue=""
                                     value=""
                                     fieldLabel="Page Icon"
                                     fieldDescription="Use this icon when icon is required for display"
                                     name="./pageIcon"
                                     namespaces="[component-style-icon]"
                                     xtype="tags"/>

                    </items>
                </iconConfigGroup>

                <thumbnailConfig
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Thumbnail Config"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">

                        <badgeThumbnailType jcr:primaryType="cq:Widget"
                                            fieldLabel="Thumbnail Image Option"
                                            allowBlank="{Boolean}true"
                                            name="./badgeThumbnailType"
                                            type="select"
                                            defaultValue=""
                                            value=""
                                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <default
                                        jcr:primaryType="nt:unstructured"
                                        value=""
                                        text="Default"/>
                                <!--<generated-->
                                <!--jcr:primaryType="nt:unstructured"-->
                                <!--value="generated"-->
                                <!--selectTab="imageConfig"-->
                                <!--text="Generate: generate new image with current image edits" />-->
                                <rendition
                                        jcr:primaryType="nt:unstructured"
                                        value="rendition"
                                        selectTab="imageConfig"
                                        text="Rendition: pick a suitable image rendition" />
                                <!--<responsive-->
                                <!--jcr:primaryType="nt:unstructured"-->
                                <!--value="responsive"-->
                                <!--selectTab="responsiveConfig"-->
                                <!--text="Responsive: use existing renditions"/>-->
                                <!--<adaptive-->
                                <!--jcr:primaryType="nt:unstructured"-->
                                <!--value="adaptive"-->
                                <!--selectTab="adaptiveConfig"-->
                                <!--text="Adaptive: generate new renditions with quality settings for each breakpoint"/>-->
                            </options>
                        </badgeThumbnailType>

                        <badgeThumbnailSize
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Icon Size (w,h)"
                                fieldDescription="blank values are not added as attributes"
                                heightParameter="./badgeThumbnailHeight"
                                widthParameter="./badgeThumbnailWidth"
                                xtype="sizefield"/>

                        <badgeOverlayIconShow jcr:primaryType="cq:Widget"
                                              fieldLabel="Show Overlay Icon"
                                              fieldDescription="show overlay icon on image"
                                              allowBlank="{Boolean}true"
                                              name="./badgeOverlayIconShow"
                                              options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                              type="select"
                                              defaultValue=""
                                              xtype="selection"/>

                        <badgeOverlayIcon jcr:primaryType="cq:Widget"
                                          allowBlank="{Boolean}true"
                                          defaultValue=""
                                          value=""
                                          fieldLabel="Overlay Icon"
                                          fieldDescription="When showing this page in a list show this icon for overlay"
                                          name="./badgeOverlayIcon"
                                          namespaces="[component-style-icon]"
                                          xtype="tags"/>

                    </items>
                </thumbnailConfig>

                <menuConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Menu Configuration"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <menuConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Config for Menu based components"
                                xtype="label"/>

                        <menuColor jcr:primaryType="cq:Widget"
                                   fieldLabel="Color"
                                   fieldDescription="Color to be used for highlighting in Site Menu"
                                   allowBlank="{Boolean}true"
                                   name="./menuColor"
                                   options="/etc/tags/component-style-theme/lists/navlist/color.valuelist.json"
                                   type="select"
                                   defaultValue=""
                                   xtype="selection"/>

                        <menuIconShow jcr:primaryType="cq:Widget"
                                      fieldLabel="Show Icon"
                                      fieldDescription="show icon in menus"
                                      allowBlank="{Boolean}true"
                                      name="./menuIconShow"
                                      options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                      type="select"
                                      defaultValue=""
                                      xtype="selection"/>

                        <menuIcon jcr:primaryType="cq:Widget"
                                  allowBlank="{Boolean}true"
                                  defaultValue=""
                                  value=""
                                  fieldLabel="Menu Icon"
                                  fieldDescription="Use this icon for Icon badge"
                                  name="./menuIcon"
                                  namespaces="[component-style-icon]"
                                  xtype="tags"/>

                        <menuAccesskey jcr:primaryType="cq:Widget"
                                       fieldLabel="Menu Access Key"
                                       fieldDescription="Keyboard Access key to use in menu"
                                       name="./menuAccessKey"
                                       allowBlank="{Boolean}true"
                                       xtype="textfield"/>

                    </items>
                </menuConfigGroup>

                <tabConfigGroup
                        jcr:primaryType="cq:Widget"
                        title="Tab Configuration"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <tabConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Icon used in Content Tabs and other Tab based components"
                                xtype="label"/>

                        <tabIconShow jcr:primaryType="cq:Widget"
                                     fieldLabel="Show Tab Icon"
                                     fieldDescription="show icon in tabs"
                                     allowBlank="{Boolean}true"
                                     name="./tabIconShow"
                                     options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                     type="select"
                                     defaultValue=""
                                     xtype="selection"/>

                        <tabIcon jcr:primaryType="cq:Widget"
                                 allowBlank="{Boolean}true"
                                 defaultValue=""
                                 value=""
                                 fieldLabel="Tab Icon"
                                 fieldDescription="When showing this page in a tab show this Icon"
                                 name="./tabIcon"
                                 namespaces="[component-style-icon]"
                                 xtype="tags"/>

                    </items>
                </tabConfigGroup>

                <animationConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Badge Animation"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <animationConfigGroupLabel
                                jcr:primaryType="cq:Widget"
                                text="Applies CSS3 animations to any child components that support them"
                                xtype="label"/>

                        <animationEnabled jcr:primaryType="cq:Widget"
                                          fieldLabel="Enable animations"
                                          fieldDescription="Should the animation be enabled for this component?"
                                          allowBlank="{Boolean}true"
                                          name="./badgeAnimationEnabled"
                                          options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                          type="select"
                                          defaultValue=""
                                          xtype="selection"/>
                        <animationName jcr:primaryType="cq:Widget"
                                       fieldLabel="Name"
                                       fieldDescription="The type of animation to run"
                                       allowBlank="{Boolean}true"
                                       name="./badgeAnimationName"
                                       options="/etc/tags/component-dialog/html/animation/name.valuelist.json"
                                       type="select"
                                       defaultValue=""
                                       xtype="selection"/>
                        <animationOnce jcr:primaryType="cq:Widget"
                                       fieldLabel="Run Once?"
                                       fieldDescription="Should the animation only run once? By default is runs everytime you scroll past the element on the page"
                                       allowBlank="{Boolean}true"
                                       name="./badgeAnimationOnce"
                                       options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                       type="select"
                                       defaultValue=""
                                       xtype="selection"/>
                        <animationEasing jcr:primaryType="cq:Widget"
                                         fieldLabel="Easing"
                                         fieldDescription="How should the animation play?"
                                         allowBlank="{Boolean}true"
                                         name="./badgeAnimationEasing"
                                         options="/etc/tags/component-dialog/html/animation/easing.valuelist.json"
                                         type="select"
                                         defaultValue=""
                                         xtype="selection"/>
                        <animationDelay jcr:primaryType="cq:Widget"
                                        fieldLabel="Delay"
                                        fieldDescription="How many milliseconds should occur before the animation runs?"
                                        allowBlank="{Boolean}true"
                                        name="./badgeAnimationDelay"
                                        min="1"
                                        step="100"
                                        defaultValue=""
                                        xtype="numberfield"/>
                        <animationDuration jcr:primaryType="cq:Widget"
                                           fieldLabel="Duration"
                                           fieldDescription="How long should the animation run for? Minimum is '400' and the maximum is '3000'. Values must be in increments of 50, i.e. 450, 500, 550..."
                                           allowBlank="{Boolean}true"
                                           name="./badgeAnimationDuration"
                                           max="3000"
                                           min="400"
                                           step="50"
                                           defaultValue=""
                                           xtype="numberfield"/>
                    </items>
                </animationConfigGroup>


            </items>
        </badgeConfigTab>




    </items>

</jcr:root>



