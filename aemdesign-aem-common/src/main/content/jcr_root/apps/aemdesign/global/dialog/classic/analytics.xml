<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#List"
          title="Common Page Fields for Classic UI"
          xtype="tabpanel">

    <items jcr:primaryType="cq:WidgetCollection">


        <analyticsTab jcr:primaryType="cq:Panel"
                  title="Analytics">
            <items jcr:primaryType="cq:WidgetCollection">
                <analyticsType
                        jcr:primaryType="cq:Widget"
                        defaultValue=""
                        fieldLabel="Analytics Type"
                        name="./analyticsType"
                        allowBlank="{Boolean}true"
                        value=""
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <default
                                jcr:primaryType="nt:unstructured"
                                value=""
                                text="Default"/>
                        <ga
                                jcr:primaryType="nt:unstructured"
                                value="ga"
                                text="Google Analytics"/>
                        <aa
                                jcr:primaryType="nt:unstructured"
                                value="aa"
                                text="Adobe Analytics"/>
                    </options>
                </analyticsType>
                <analyticsHitType jcr:primaryType="cq:Widget"
                                   fieldLabel="Hit Type"
                                   fieldDescription="Specifies the event category [AA,GA]"
                                   allowBlank="{Boolean}true"
                                   name="./analyticsHitType"
                                   options="/etc/tags/component-analytics/hittype.valuelist.json"
                                   type="select"
                                   defaultValue=""
                                   xtype="selection"/>
                <analyticsEventCategory  jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue=""
                                value=""
                                fieldLabel="Event Category"
                                fieldDescription="Specifies the event category [AA,GA]"
                                name="./analyticsEventCategory"
                                namespaces="[aemdesign]"
                                xtype="tags"/>
                <analyticsEventAction  jcr:primaryType="cq:Widget"
                              allowBlank="{Boolean}true"
                              defaultValue=""
                              value=""
                              fieldLabel="Event Action"
                              fieldDescription="Specifies the event action [GA]"
                              name="./analyticsEventAction"
                              namespaces="[aemdesign]"
                              xtype="tags"/>
                <analyticsEventLabel  jcr:primaryType="cq:Widget"
                             allowBlank="{Boolean}true"
                             fieldDescription="Specifies the event label [AA,GA]"
                             fieldLabel="Event Label"
                             name="./analyticsEventLabel"
                             xtype="textfield"/>
                <analyticsTransport  jcr:primaryType="cq:Widget"
                             allowBlank="{Boolean}true"
                             fieldDescription=""
                             fieldLabel="Transport [GA]"
                             name="./analyticsTransport"
                             xtype="textfield"/>
                <analyticsNonInteraction jcr:primaryType="cq:Widget"
                            fieldLabel="Non Interactive"
                            fieldDescription="Is action interactive [GA]"
                            allowBlank="{Boolean}true"
                            name="./analyticsNonInteraction"
                            options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>
            </items>
        </analyticsTab>


    </items>

</jcr:root>



