<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    helpPath="en/cq/current/wcm/default_components.html#Image"
    title="Content Block"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <basicTab
            jcr:primaryType="cq:Panel"
            border="false"
            height=""
            title="Basic"
            width=""
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    collapsed="false"
                    collapsible="false"
                    xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <title
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Title"
                            name="./title"
                            xtype="textfield"/>
                        <hideTitle jcr:primaryType="cq:Widget"
                                        fieldLabel="Hide Title"
                                        allowBlank="{Boolean}true"
                                        name="./hideTitle"
                                        options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                        type="select"
                                        defaultValue=""
                                        value=""
                                        xtype="selection"/>

                        <hideTopLink jcr:primaryType="cq:Widget"
                                        fieldLabel="Hide Back to Top link"
                                        fieldDescription="will hide link Back to Top at the bottom of section"
                                        allowBlank="{Boolean}true"
                                        name="./hideTopLink"
                                        options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                        type="select"
                                        defaultValue=""
                                        value=""
                                        xtype="selection"/>

                        <hideInContentMenu jcr:primaryType="cq:Widget"
                                        fieldLabel="Hide Title in content block menu"
                                        fieldDescription="will hide this section from Content Block List"
                                        allowBlank="{Boolean}true"
                                        name="./hideInMenu"
                                        options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                                        type="select"
                                        defaultValue=""
                                        value=""
                                        xtype="selection"/>

                        <titleType jcr:primaryType="cq:Widget"
                                   fieldLabel="Title Type"
                                   fieldDescription="which paragraph tag to use for Title display"
                                   allowBlank="{Boolean}true"
                                   name="./titleType"
                                   options="/etc/tags/component-dialog/html/heading.valuelist.json"
                                   type="select"
                                   defaultValue=""
                                   value=""
                                   xtype="selection"/>

                    </items>
                </title>
            </items>
        </basicTab>
        <styleTab
                jcr:primaryType="cq:Panel"
                title="Adv Style">
            <items jcr:primaryType="cq:WidgetCollection">
                <css
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CSS Class name"
                        name="./cssClass"
                        xtype="textfield"/>
                <attrId
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Id Attribute"
                        name="./attrId"
                        xtype="textfield"/>
                <showdataTitle
                        jcr:primaryType="cq:Widget"
                        checked="false"
                        defaultValue="false"
                        fieldLabel="Show dataTitle in section"
                        fieldDescritpion="show dataTitle for section"
                        name="./showdataTitle"
                        type="checkbox"
                        xtype="selection"/>
                <showdataScroll
                        jcr:primaryType="cq:Widget"
                        checked="false"
                        defaultValue="false"
                        fieldLabel="Show dataScroll in section"
                        fieldDescritpion="show dataScroll for section"
                        name="./showdataScroll"
                        type="checkbox"
                        xtype="selection"/>
            </items>
        </styleTab>
        <linkLeftTab
                jcr:primaryType="cq:Panel"
                title="Left Links">
            <items jcr:primaryType="cq:WidgetCollection">
                <linksLeft
                        jcr:primaryType="cq:Widget"
                        fieldDescription="These links will appear on the left title"
                        fieldLabel="Left Links"
                        name="./linkPagesLeft"
                        xtype="multifield">
                    <fieldConfig
                            jcr:primaryType="cq:Widget"
                            allowBlank="{Boolean}true"
                            xtype="pathfield"/>
                </linksLeft>
            </items>
        </linkLeftTab>
        <linkRightTab
                jcr:primaryType="cq:Panel"
                title="Right Links">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        fieldDescription="These links will appear on the right title"
                        name="./linksRightTitle"
                        xtype="textfield"/>
                <linksRight
                        jcr:primaryType="cq:Widget"
                        fieldDescription="These links will appear on the right title"
                        fieldLabel="Right Links"
                        name="./linkPagesRight"
                        xtype="multifield">
                    <fieldConfig
                            jcr:primaryType="cq:Widget"
                            allowBlank="{Boolean}true"
                            xtype="pathfield"/>
                </linksRight>
            </items>
        </linkRightTab>
        <backgroundTab
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                name="./bgimage/file"
                title="Background Image"
                ddGroups="[media]"
                cropParameter="./bgimage/imageCrop"
                fileNameParameter="./bgimage/fileName"
                fileReferenceParameter="./bgimage/fileReference"
                rotateParameter="./bgimage/imageRotate"
                mapParameter="./bgimage/imageMap"
                xtype="html5smartimage"
                />
    </items>
</jcr:root>
