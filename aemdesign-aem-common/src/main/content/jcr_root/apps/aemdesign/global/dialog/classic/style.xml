<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#List"
          title="Common Page Fields for Classic UI"
          xtype="tabpanel">

    <items jcr:primaryType="cq:WidgetCollection">


        <styleTab jcr:primaryType="cq:Panel"
                  title="Style">
            <items jcr:primaryType="cq:WidgetCollection">
                <componentId jcr:primaryType="cq:Widget"
                             fieldLabel="ID"
                             name="./componentId"
                             allowBlank="{Boolean}true"
                             xtype="textfield"/>

                <componentTheme jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue=""
                                value=""
                                fieldLabel="Theme"
                                name="./componentTheme"
                                namespaces="[component-style-theme]"
                                xtype="tags"/>

                <componentModifiers jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}true"
                                    defaultValue=""
                                    value=""
                                    fieldLabel="Modifiers"
                                    name="./componentModifiers"
                                    namespaces="[component-style-modifier]"
                                    xtype="tags"/>

                <componentModule jcr:primaryType="cq:Widget"
                                 allowBlank="{Boolean}true"
                                 defaultValue=""
                                 value=""
                                 fieldLabel="Module"
                                 name="./componentModule"
                                 namespaces="[component-style-module]"
                                 xtype="tags"/>

                <componentChevron jcr:primaryType="cq:Widget"
                                  allowBlank="{Boolean}true"
                                  defaultValue=""
                                  value=""
                                  fieldLabel="Chevron"
                                  name="./componentChevron"
                                  namespaces="[component-style-chevron]"
                                  xtype="tags"/>

                <componentIcon jcr:primaryType="cq:Widget"
                               allowBlank="{Boolean}true"
                               defaultValue=""
                               value=""
                               fieldLabel="Icon"
                               name="./componentIcon"
                               namespaces="[component-style-icon]"
                               xtype="tags"/>

                <componentBooleanAttrs jcr:primaryType="cq:Widget"
                                   allowBlank="{Boolean}true"
                                   defaultValue=""
                                   value=""
                                   fieldLabel="Boolean Attributes"
                                   name="./componentBooleanAttrs"
                                   namespaces="[component-style-modifier]"
                                   xtype="tags"/>

                <position
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Position coordinates"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <positions
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Positions"
                                fieldDescription="The X and Y values of the Position"
                                widthParameter="./positionX"
                                widthSuffix="X position"
                                heightParameter="./positionY"
                                heightSuffix="Y position"
                                xtype="sizefield"/>
                    </items>
                </position>

                <animation
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Animation"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <animationConfigGroupLabel
                            jcr:primaryType="cq:Widget"
                            text="Applies CSS3 animations to any child components that support them"
                            xtype="label"/>

                        <animationEnabled jcr:primaryType="cq:Widget"
                            fieldLabel="Enable animations"
                            fieldDescription="Should the animation be enabled for this component?"
                            allowBlank="{Boolean}true"
                            name="./animationEnabled"
                            options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>
                        <animationName jcr:primaryType="cq:Widget"
                            fieldLabel="Name"
                            fieldDescription="The type of animation to run"
                            allowBlank="{Boolean}true"
                            name="./animationName"
                            options="/etc/tags/component-style-theme/common/animation/name.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>
                        <animationOnce jcr:primaryType="cq:Widget"
                            fieldLabel="Run Once?"
                            fieldDescription="Should the animation only run once? By default is runs everytime you scroll past the element on the page"
                            allowBlank="{Boolean}true"
                            name="./animationOnce"
                            options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>
                        <animationEasing jcr:primaryType="cq:Widget"
                            fieldLabel="Easing"
                            fieldDescription="How should the animation play?"
                            allowBlank="{Boolean}true"
                            name="./animationEasing"
                            options="/etc/tags/component-style-theme/common/animation/easing.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>
                        <animationDelay jcr:primaryType="cq:Widget"
                            fieldLabel="Delay"
                            fieldDescription="How many milliseconds should occur before the animation runs?"
                            allowBlank="{Boolean}true"
                            name="./animationDelay"
                            min="1"
                            step="100"
                            defaultValue=""
                            xtype="numberfield"/>
                        <animationDuration jcr:primaryType="cq:Widget"
                            fieldLabel="Duration"
                            fieldDescription="How long should the animation run for? Minimum is '400' and the maximum is '3000'. Values must be in increments of 50, i.e. 450, 500, 550..."
                            allowBlank="{Boolean}true"
                            name="./animationDuration"
                            max="3000"
                            min="400"
                            step="50"
                            defaultValue=""
                            xtype="numberfield"/>
                    </items>
                </animation>

            </items>


        </styleTab>


    </items>

</jcr:root>



