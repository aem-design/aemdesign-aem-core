<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#List"
          title="Common Page Fields for Classic UI"
          xtype="tabpanel">

    <items jcr:primaryType="cq:WidgetCollection">

        <basicTab
                jcr:primaryType="cq:Panel"
                title="Basic">
            <items jcr:primaryType="cq:WidgetCollection">
                <variant
                        jcr:primaryType="cq:Widget"
                        defaultValue=""
                        value=""
                        allowBlank="{Boolean}true"
                        fieldLabel="Variant"
                        name="./variant"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <default
                                jcr:primaryType="nt:unstructured"
                                value=""
                                text="Default"/>
                    </options>
                </variant>
            </items>
        </basicTab>

        <linkTab jcr:primaryType="cq:Panel"
                 title="Link">
            <items jcr:primaryType="cq:WidgetCollection">
                <linkUrl
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        fieldLabel="Target URL"
                        name="./linkUrl"
                        xtype="pathfield"/>
                <linkTarget jcr:primaryType="cq:Widget"
                           fieldLabel="Link Target"
                           fieldDescription="Where should the link be loaded when link is clicked"
                           allowBlank="{Boolean}true"
                           name="./linkTarget"
                           options="/etc/tags/component-dialog/html/linktarget.valuelist.json"
                           type="select"
                           defaultValue=""
                           xtype="selection"/>
            </items>
        </linkTab>



        <advancedTab jcr:primaryType="cq:Panel" title="Advanced">

            <items jcr:primaryType="cq:WidgetCollection">
                <hideTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide title"
                        name="./hideTitle"
                        defaultValue="false"
                        type="checkbox"
                        xtype="selection"/>
                <hideSeparator
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide separator"
                        name="./hideSeparator"
                        type="checkbox"
                        xtype="selection"/>

                <hideSummary
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide summary"
                        name="./hideSummary"
                        type="checkbox"
                        xtype="selection"/>


            </items>
        </advancedTab>


    </items>

</jcr:root>



