<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          helpPath="en/cq/current/wcm/default_components.html#List"
          title="Common Page Fields for Classic UI"
          xtype="tabpanel">

    <items jcr:primaryType="cq:WidgetCollection">

        <image
                jcr:primaryType="cq:Widget"
                cropParameter="./image/imageCrop"
                ddGroups="[media]"
                fileNameParameter="./image/fileName"
                fileReferenceParameter="./image/fileReference"
                mapParameter="./image/imageMap"
                name="./image/file"
                renditionSuffix="/_jcr_content/renditions/original"
                requestSuffix=".img.png"
                rotateParameter="./image/imageRotate"
                title="Image"
                xtype="html5smartimage"/>

        <basicTab
                jcr:primaryType="cq:Panel"
                title="Basic">
            <items jcr:primaryType="cq:WidgetCollection">
                <variant
                        jcr:primaryType="cq:Widget"
                        defaultValue=""
                        value=""
                        allowBlank="{Boolean}true"
                        fieldLabel="Variant"
                        name="./variant"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <default
                                jcr:primaryType="nt:unstructured"
                                value=""
                                text="Default"/>
                    </options>
                </variant>
            </items>
        </basicTab>

        <siteThemeTab jcr:primaryType="cq:Panel"
                   title="Theme">
            <items jcr:primaryType="cq:WidgetCollection">
                <siteThemeCategory jcr:primaryType="cq:Widget"
                                   fieldLabel="Site Theme"
                                   fieldDescription="Site theme Category to include"
                                   allowBlank="{Boolean}true"
                                   name="./siteThemeCategory"
                                   options="/etc/tags/component-style/theme/site/themecategory.valuelist.json"
                                   type="select"
                                   defaultValue=""
                                   xtype="selection"/>
                <siteThemeColor jcr:primaryType="cq:Widget"
                                fieldLabel="Theme Color"
                                fieldDescription="Used by browsers for Tab and Browser windows colors"
                                allowBlank="{Boolean}true"
                                name="./siteThemeColor"
                                options="/etc/tags/component-style/theme/site/themecolor.valuelist.json"
                                type="select"
                                defaultValue=""
                                xtype="selection"/>
                <siteTileColor jcr:primaryType="cq:Widget"
                           fieldLabel="Tile Color"
                           fieldDescription="Used by browsers for Tab and Browser tile colors"
                           allowBlank="{Boolean}true"
                           name="./siteTileColor"
                           options="/etc/tags/component-style/theme/site/tilecolor.valuelist.json"
                           type="select"
                           defaultValue=""
                           xtype="selection"/>
            </items>
        </siteThemeTab>

        <metadataTab jcr:primaryType="cq:Panel"
                      title="Metadata">
            <items jcr:primaryType="cq:WidgetCollection">
                <contentType jcr:primaryType="cq:Widget"
                                   fieldLabel="OG Content Type"
                                   fieldDescription="Used to include specific content metadata"
                                   allowBlank="{Boolean}true"
                                   name="./metadataContentType"
                                   options="/etc/tags/content-type/page.valuelist.json"
                                   type="select"
                                   defaultValue=""
                                   xtype="selection"/>
            </items>
        </metadataTab>


        <styleTab jcr:primaryType="cq:Panel"
                   title="Style">
            <items jcr:primaryType="cq:WidgetCollection">
                <componentId jcr:primaryType="cq:Widget"
                             fieldLabel="ID"
                             name="./componentId"
                             allowBlank="{Boolean}true"
                             xtype="textfield"/>

                <componentTheme jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                defaultValue=""
                                value=""
                                fieldLabel="Theme"
                                name="./componentTheme"
                                namespaces="[component-style]"
                                xtype="tags"/>

                <componentModifiers jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}true"
                                    defaultValue=""
                                    value=""
                                    fieldLabel="Modifiers"
                                    name="./componentModifiers"
                                    namespaces="[component-style]"
                                    xtype="tags"/>

                <componentModule jcr:primaryType="cq:Widget"
                                 allowBlank="{Boolean}true"
                                 defaultValue=""
                                 value=""
                                 fieldLabel="Module"
                                 name="./componentModule"
                                 namespaces="[component-style]"
                                 xtype="tags"/>

                <componentChevron jcr:primaryType="cq:Widget"
                                  allowBlank="{Boolean}true"
                                  defaultValue=""
                                  value=""
                                  fieldLabel="Chevron"
                                  name="./componentChevron"
                                  namespaces="[component-style]"
                                  xtype="tags"/>

                <componentIcon jcr:primaryType="cq:Widget"
                               allowBlank="{Boolean}true"
                               defaultValue=""
                               value=""
                               fieldLabel="Icon"
                               name="./componentIcon"
                               namespaces="[component-style]"
                               xtype="tags"/>

                <position
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Position coordinates"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <positions
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Positions"
                                fieldDescription="The X and Y values of the Position"
                                widthParameter="./positionX"
                                widthSuffix="X position"
                                heightParameter="./positionY"
                                heightSuffix="Y position"
                                xtype="sizefield"/>
                    </items>
                </position>

            </items>


        </styleTab>


        <accessibilityTab jcr:primaryType="cq:Panel"
                  title="Accessibility">
            <items jcr:primaryType="cq:WidgetCollection">

                <ariaLabel jcr:primaryType="cq:Widget"
                           fieldLabel="Aria Label"
                           fieldDescription="Defines a string value that labels the current element."
                           name="./ariaLabel"
                           allowBlank="{Boolean}true"
                           xtype="textfield"/>

                <ariaRole jcr:primaryType="cq:Widget"
                          fieldLabel="Aria Role"
                          fieldDescription="Main indicator of type. This semantic association allows tools to present and support interaction with the object in a manner that is consistent with user expectations about other objects of that type."
                          allowBlank="{Boolean}true"
                          name="./ariaRole"
                          options="/etc/tags/component-aria/role.valuelist.json"
                          type="select"
                          defaultValue=""
                          xtype="selection"/>

                <ariaDescribedBy jcr:primaryType="cq:Widget"
                           fieldLabel="Aria Described By"
                           fieldDescription="Identifies the element (or elements) that describes the object."
                           name="./ariaDescribedBy"
                           allowBlank="{Boolean}true"
                           xtype="textfield"/>

                <ariaLabelledBy jcr:primaryType="cq:Widget"
                           fieldLabel="Aria Labelled By"
                           fieldDescription="Identifies the element (or elements) that labels the current element."
                           name="./ariaLabelledBy"
                           allowBlank="{Boolean}true"
                           xtype="textfield"/>

                <ariaControls jcr:primaryType="cq:Widget"
                                fieldLabel="Aria Controls"
                                fieldDescription="Identifies the element (or elements) whose contents or presence are controlled by the current element. "
                                name="./ariaControls"
                                allowBlank="{Boolean}true"
                                xtype="textfield"/>

                <ariaLive jcr:primaryType="cq:Widget"
                          fieldLabel="Aria Live"
                          fieldDescription="Indicates that an element will be updated, and describes the types of updates the user agents, assistive technologies, and user can expect from the live region."
                          allowBlank="{Boolean}true"
                          name="./ariaLive"
                          options="/etc/tags/component-aria/live.valuelist.json"
                          type="select"
                          defaultValue=""
                          xtype="selection"/>

                <ariaHidden jcr:primaryType="cq:Widget"
                            fieldLabel="Aria Hidden"
                            fieldDescription="Indicates that the element and all of its descendants are not visible or perceivable to any user as implemented by the author."
                            allowBlank="{Boolean}true"
                            name="./ariaHidden"
                            options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>

                <ariaHaspopup jcr:primaryType="cq:Widget"
                            fieldLabel="Aria Has-Popup"
                            fieldDescription="Indicates that the element has a popup context menu or sub-level menu."
                            allowBlank="{Boolean}true"
                            name="./ariaHaspopup"
                            options="/etc/tags/component-dialog/common/true-false.valuelist.json"
                            type="select"
                            defaultValue=""
                            xtype="selection"/>

                <ariaAccessKey jcr:primaryType="cq:Widget"
                               fieldLabel="Access Key"
                               fieldDescription="Identifies the element (or elements) whose contents or presence are controlled by the current element. "
                               name="./ariaAccessKey"
                               allowBlank="{Boolean}true"
                               xtype="textfield"/>

            </items>

            <!--aria-expanded-->
            <!--aria-controls-->
            <!--aria-pressed (booo)-->
            <!--aria-haspopup-->


        </accessibilityTab>

        <!--This standard tab is being cqincluded by other components.-->
        <imageTab
                jcr:primaryType="cq:Widget"
                allowUpload="false"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Image"
                xtype="html5smartimage">
            <cropConfig jcr:primaryType="nt:unstructured">
                <aspectRatios jcr:primaryType="nt:unstructured">
                    <freehand
                            jcr:primaryType="nt:unstructured"
                            value="0,0"
                            text="Free hand"/>
                    <twobythree
                            jcr:primaryType="nt:unstructured"
                            value="2,3"
                            text="2 x 3"/>
                    <threebyfive
                            jcr:primaryType="nt:unstructured"
                            value="3,5"
                            text="3 x 5"/>
                    <sixteenbynine
                            jcr:primaryType="nt:unstructured"
                            value="16,9"
                            text="16 x 9"/>
                    <square
                            jcr:primaryType="nt:unstructured"
                            value="1,1"
                            text="Square"/>
                </aspectRatios>
            </cropConfig>
        </imageTab>

        <overrideImageMetadataTab
                jcr:primaryType="cq:Widget"
                description="This tab is being cqincluded by other component. Fields are to override image metadata"
                title="Override Image Metadata"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Alternative title that overrides the existing image title from DAM"
                        fieldLabel="Title"
                        name="./dc:title"
                        xtype="textfield"/>
                <description
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Alternative description that overrides the existing image description from DAM"
                        fieldLabel="Description"
                        name="./dc:description"
                        xtype="textarea"/>
                <altText
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Alternative alt text that overrides the existing image alt text from DAM"
                        fieldLabel="Alt Text"
                        name="./titleAlt"
                        xtype="textfield"/>
                <caption
                        jcr:primaryType="cq:Widget"
                        fieldDescription="A brief explanation accompanying an illustration"
                        fieldLabel="Caption"
                        name="./caption"
                        xtype="textfield"/>
                <sourceURL
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Alternative destination URL overrides the existing value from DAM"
                        fieldLabel="Source URL"
                        name="./sourceUrl"
                        xtype="textfield"/>

            </items>
        </overrideImageMetadataTab>


        <pageBasicTab jcr:primaryType="cq:Panel"
                  title="Page Details">
            <items jcr:primaryType="cq:WidgetCollection">

                <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        fieldDescription="Leave empty to use current page title"
                        name="./title"
                        xtype="textfield"/>
                <descriptionLabel
                        jcr:primaryType="cq:Widget"
                        text="Description"
                        xtype="label"/>
                <description jcr:primaryType="cq:Widget"
                             fieldLabel="Description"
                             fieldDescription="Leave empty to use current page description"
                             hideLabel="{Boolean}true"
                             name="./description"
                             xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured"
                                path="/apps/aemdesign/global/dialog/classic/rteprofile/items/advanced/items/text/rtePlugins.infinity.json"
                                xtype="cqinclude" />
                </description>

                <author
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Author"
                        name="./author"
                        xtype="textfield"/>

                <!-- if using cq:tags, that field is for taxonomy on Content only -->

                <!-- Category is the additional value on top of cq:Content's cq:tags -->
                <category
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Primary Category"
                        fieldDescription="this will be displayed as Primary Category on the page and on cards in grids"
                        allowBlank="{Boolean}true"
                        name="./cq:tags"
                        namespaces="[aemdesign]"
                        xtype="tags"/>

                <subCategory
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Secondary Category"
                        fieldDescription="this will be display as Secondary Category on cards in grids"
                        allowBlank="{Boolean}true"
                        name="./subCategory"
                        namespaces="[aemdesign]"
                        xtype="tags"/>

                <!-- Adding Mixin [cq:Taggable] into the resource to make cq:Tags work -->
                <mixinTypes jcr:primaryType="cq:Widget"
                            allowBlank="{Boolean}false"
                            fieldLabel="cq:Taggable"
                            defaultValue="cq:Taggable"
                            value="cq:Taggable"
                            name="./jcr:mixinTypes"
                            xtype="hidden"/>

                <mixinTypesHint
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./jcr:mixinTypes@TypeHint"
                        value="jcr:mixinTypes"
                        xtype="hidden"/>

            </items>
        </pageBasicTab>

        <pageSecondaryImageTab jcr:primaryType="cq:Widget"
            cropParameter="./secondaryImage/imageCrop"
            ddGroups="[media]"
            fileNameParameter="./secondaryImage/fileName"
            fileReferenceParameter="./secondaryImage/fileReference"
            mapParameter="./secondaryImage/imageMap"
            name="./secondaryImage/file"
            rotateParameter="./secondaryImage/imageRotate"
            title="Secondary Image"
            xtype="html5smartimage"/>

        <pageAdvancedTab jcr:primaryType="cq:Panel"
                         title="Advanced">
            <items jcr:primaryType="cq:WidgetCollection">
                <menuConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Menu Configuration"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <menuColor jcr:primaryType="cq:Widget"
                                   fieldLabel="Color"
                                   fieldDescription="Color to be used for highlighting in Site Menu"
                                   allowBlank="{Boolean}true"
                                   name="./menuColor"
                                   options="/etc/tags/component-style/components/navlist/color.valuelist.json"
                                   type="select"
                                   defaultValue=""
                                   xtype="selection"/>
                    </items>
                </menuConfigGroup>

                <compositionConfigGroup
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Detail Component Composition"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <showBreadcrumb jcr:primaryType="cq:Widget"
                                        fieldLabel="Show Breadcrumb"
                                        allowBlank="{Boolean}true"
                                        name="./showBreadcrumb"
                                        options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                        type="select"
                                        defaultValue=""
                                        value=""
                                        xtype="selection"/>

                        <showToolbar jcr:primaryType="cq:Widget"
                                     fieldLabel="Show Toolbar"
                                     allowBlank="{Boolean}true"
                                     name="./showToolbar"
                                     options="/etc/tags/component-dialog/common/yes-no.valuelist.json"
                                     type="select"
                                     defaultValue=""
                                     value=""
                                     xtype="selection"/>

                        </items>
                </compositionConfigGroup>
