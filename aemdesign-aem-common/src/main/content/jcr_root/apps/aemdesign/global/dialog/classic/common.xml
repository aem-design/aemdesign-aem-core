        </pageAdvancedTab>


        <linkTab jcr:primaryType="cq:Panel"
                 title="Link">
            <items jcr:primaryType="cq:WidgetCollection">
                <linkUrl
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        fieldLabel="Target URL"
                        name="./linkUrl"
                        xtype="pathfield"/>
                <hrefTargets
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}false"
                        fieldLabel="Rendering Options"
                        name="./hrefTargets"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <o2
                                jcr:primaryType="nt:unstructured"
                                text="Load page in a new browser window"
                                value="_blank"/>
                        <o3
                                jcr:primaryType="nt:unstructured"
                                text="Load page in current window"
                                value="_self"/>
                        <o4
                                jcr:primaryType="nt:unstructured"
                                text="Load the page in the parent/superior frame"
                                value="_parent"/>
                        <o5
                                jcr:primaryType="nt:unstructured"
                                text="Cancel all frames, and loads in full browser window"
                                value="_top"/>
                    </options>
                </hrefTargets>
            </items>
        </linkTab>

        <overlayTab
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                name="./overlay/file"
                title="Image"
                ddGroups="[media]"
                cropParameter="./overlay/imageCrop"
                fileNameParameter="./overlay/fileName"
                fileReferenceParameter="./overlay/fileReference"
                rotateParameter="./overlay/imageRotate"
                mapParameter="./overlay/imageMap"
                xtype="html5smartimage"/>



        <advancedTab jcr:primaryType="cq:Panel" title="Advanced">

            <items jcr:primaryType="cq:WidgetCollection">
                <hide_site_title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide site title"
                        name="./hideSiteTitle"
                        defaultValue="false"
                        type="checkbox"
                        xtype="selection"/>
                <hide_separator
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide separator"
                        name="./hideSeparator"
                        type="checkbox"
                        xtype="selection"/>

                <hide_summary
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide summary"
                        name="./hideSummary"
                        type="checkbox"
                        xtype="selection"/>


            </items>
        </advancedTab>


        <menuIconTab
                jcr:primaryType="cq:Panel"
                title="Menu Icon">
            <items jcr:primaryType="cq:WidgetCollection">
                <showAsIcon
                        jcr:primaryType="cq:Widget"
                        defaultValue="false"
                        fieldLabel="Show As Icon"
                        fieldDescription="When showing this page in menu show this as Icon"
                        name="./menuIcon"
                        type="checkbox"
                        xtype="selection"/>
                <icon
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Icon Path"
                        name="./menuIconPath"
                        rootPath="/content/dam"
                        fieldDescription="The location of the icon to use"
                        xtype="pathfield"/>

            </items>
        </menuIconTab>
        <tabIconTab
                jcr:primaryType="cq:Panel"
                title="Tab Icon"
                description="Icon used in Tabs">
            <items jcr:primaryType="cq:WidgetCollection">
                <showAsIcon
                        jcr:primaryType="cq:Widget"
                        defaultValue="false"
                        fieldLabel="Show As Icon"
                        fieldDescription="When showing this page in a tab show this as Icon"
                        name="./tabIcon"
                        type="checkbox"
                        xtype="selection"/>
                <icon
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Icon Path"
                        name="./tabIconPath"
                        rootPath="/content/dam"
                        fieldDescription="The location of the icon to use"
                        xtype="pathfield"/>
            </items>
        </tabIconTab>
        <titleIconTab
                jcr:primaryType="cq:Panel"
                title="Title Icon"
                description="Icon used in Titles">
            <items jcr:primaryType="cq:WidgetCollection">
                <showAsIcon
                        jcr:primaryType="cq:Widget"
                        defaultValue="false"
                        fieldLabel="Show As Icon"
                        fieldDescription="When showing this page links show this as Icon"
                        name="./titleIcon"
                        type="checkbox"
                        xtype="selection"/>
                <icon
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Icon Path"
                        name="./titleIconPath"
                        rootPath="/content/dam"
                        fieldDescription="The location of the icon to use"
                        xtype="pathfield"/>
            </items>
        </titleIconTab>

    </items>

</jcr:root>



