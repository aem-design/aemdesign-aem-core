<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
          jcr:primaryType="cq:Dialog"
          activeTab="0"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <link jcr:primaryType="cq:Panel"
               title="Link RTE" description="Authors have ability to add Link Rich Text Text">
            <items jcr:primaryType="cq:WidgetCollection">
                <label jcr:primaryType="cq:Widget"
                    fieldLabel="Label"
                    height="{Long}100"
                    name="./label"
                    removeSingleParagraphContainer="{Boolean}true"
                    xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <format
                            jcr:primaryType="nt:unstructured"
                            features="[bold,underline,italic]"/>
                        <links
                            jcr:primaryType="nt:unstructured"
                            features="[]"/>
                        <justify
                            jcr:primaryType="nt:unstructured"
                            features="[]"/>
                        <lists
                            jcr:primaryType="nt:unstructured"
                            features="[]"/>
                        <misctools
                                jcr:primaryType="nt:unstructured"
                                features="[specialchars,sourceedit]">
                            <specialCharsConfig jcr:primaryType="nt:unstructured"
                                                path="/apps/aemdesign/global/dialog/classic/rteprofile/items/advanced/items/text/rtePlugins/misctools/specialCharsConfig.infinity.json"
                                                xtype="cqinclude"/>
                        </misctools>

                    </rtePlugins>
                </label>
            </items>
        </link>

        <basic jcr:primaryType="cq:Panel"
               title="Basic RTE" description="Basic RTE">
            <items jcr:primaryType="cq:WidgetCollection">
                <text jcr:primaryType="cq:Widget"
                      fieldLabel="Text"
                      hideLabel="{Boolean}true"
                      name="./text"
                      xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <format
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <justify
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <links
                                jcr:primaryType="nt:unstructured"
                                features="[]"/>
                        <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="[]"/>
                    </rtePlugins>
                </text>

                <richFlag
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./textIsRich"
                        value="true"
                        xtype="hidden"/>
            </items>
        </basic>

        <normal jcr:primaryType="cq:Panel"
               title="Normal RTE" description="Normal RTE">
            <items jcr:primaryType="cq:WidgetCollection">
                <text jcr:primaryType="cq:Widget"
                      fieldLabel="Text"
                      name="./text"
                      hideLabel="{Boolean}true"
                      xtype="richtext">
                </text>
                <richFlag
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./textIsRich"
                        value="true"
                        xtype="hidden"/>
            </items>
        </normal>
        <advanced jcr:primaryType="cq:Panel"
                 title="Advanced RTE" description="Advanced RTE">
            <items jcr:primaryType="cq:WidgetCollection">

                <text jcr:primaryType="cq:Widget"
                        fieldLabel="Text"
                        hideLabel="{Boolean}true"
                        name="./text"
                        xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <table
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <format
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <edit
                                jcr:primaryType="nt:unstructured"
                                features="[cut,copy,paste-default,paste-plaintext,paste-wordhtml]">
                            <!-- to filter out from html attribue data-->
                            <htmlPasteRules jcr:primaryType="nt:unstructured">
                                <allowBasics jcr:primaryType="nt:unstructured"
                                             bold="{Boolean}true"
                                             italic="{Boolean}true"
                                             underline="{Boolean}true"
                                             anchor="{Boolean}true"
                                             image="{Boolean}true">
                                </allowBasics>
                                <allowBlockTags jcr:primaryType="nt:unstructured"
                                                allowBlockTags="[p,h1,h2,h3,h4,h5,h6,ol,ul,table,hr]"/>
                                <list jcr:primaryType="nt:unstructured"
                                      allow="{Boolean}false"
                                      ignoreMode="paragraph"/>
                                <table jcr:primaryType="nt:unstructured"
                                       allow="{Boolean}true"
                                       ignoreMode="paragraph"/>
                            </htmlPasteRules>
                        </edit>
                        <justify
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <findreplace
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <formats jcr:primaryType="cq:WidgetCollection">
                                    <paragraph jcr:primaryType="nt:unstructured"
                                        tag="p"
                                        description="Paragraph"/>
                                    <heading1 jcr:primaryType="nt:unstructured"
                                        tag="h1"
                                        description="Heading 1"/>
                                    <heading2 jcr:primaryType="nt:unstructured"
                                        tag="h2"
                                        description="Heading 2"/>
                                    <heading3 jcr:primaryType="nt:unstructured"
                                        tag="h3"
                                        description="Heading 3"/>
                                    <heading4 jcr:primaryType="nt:unstructured"
                                        tag="h4"
                                        description="Heading 4"/>
                                    <heading5 jcr:primaryType="nt:unstructured"
                                        tag="h5"
                                        description="Heading 5"/>
                                    <heading6 jcr:primaryType="nt:unstructured"
                                        tag="h6"
                                        description="Heading 6"/>
                                    <blockquote jcr:primaryType="nt:unstructured"
                                        tag="blockquote"
                                        description="Blockquote"/>
                                </formats>
                        </paraformat>
                        <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                            <styles jcr:primaryType="cq:WidgetCollection"
                                                path="/etc/tags/component-dialog/rte/styles.overlay.infinity.json"
                                                xtype="cqinclude" />
                        </styles>


                        <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <misctools
                                jcr:primaryType="nt:unstructured"
                                features="[specialchars]">
                            <specialCharsConfig jcr:primaryType="nt:unstructured"
                                                path="/etc/tags/component-dialog/rte/specialCharsConfig.overlay.infinity.json"
                                                xtype="cqinclude" />

                        </misctools>
<!--
                        <links
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
-->
                        <links jcr:primaryType="nt:unstructured"
                               features="*">
                            <linkDialogConfig
                                    jcr:primaryType="nt:unstructured"
                                    height="{Long}316">
                                <linkAttributes jcr:primaryType="cq:WidgetCollection">
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Title"
                                            name="title"
                                            xtype="textfield"/>
                                    <cssclass
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="CSS Class"
                                            name="cssClass"
                                            xtype="textfield"/>
                                    <dataTarget
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Data Target"
                                            name="dataTarget"
                                            xtype="textfield"/>
                                    <!--<linkAdvanced
                                            jcr:primaryType="cq:Widget"
                                            collapsed="{Boolean}true"
