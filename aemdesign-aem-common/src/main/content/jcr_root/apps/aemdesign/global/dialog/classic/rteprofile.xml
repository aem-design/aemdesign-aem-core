                <links
                        jcr:primaryType="nt:unstructured"
                        path="/apps/aemdesign/global/dialog/classic/rteprofile/items/advanced/items/text/rtePlugins/links.infinity.json"
                        xtype="cqinclude"/>

                <edit
                        jcr:primaryType="nt:unstructured"
