                        <undo
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        <image
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                    </rtePlugins>

                </text>
                <richFlag
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./textIsRich"
                        value="true"
                        xtype="hidden"/>

            </items>
        </admin>

